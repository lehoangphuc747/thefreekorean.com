<style>
  .download-section {
    background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
    color: white;
    padding: 2rem;
    border-radius: 16px;
    margin: 2rem 0;
    scroll-margin-top: 100px; /* For smooth scroll positioning */
  }

  .download-section h2 {
    text-align: center;
    margin-bottom: 2rem;
    font-size: 1.8rem;
    text-shadow: 0 2px 4px rgba(0,0,0,0.2);
  }

  .download-grid {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(300px, 1fr));
    gap: 1.5rem;
    margin-bottom: 2rem;
  }

  .download-card {
    background: rgba(255, 255, 255, 0.1);
    backdrop-filter: blur(10px);
    border: 1px solid rgba(255, 255, 255, 0.2);
    border-radius: 12px;
    padding: 1.5rem;
    display: flex;
    align-items: center;
    gap: 1rem;
    transition: all 0.3s ease;
    text-decoration: none;
    color: inherit;
    cursor: pointer;
  }

  .download-card:hover {
    transform: translateY(-4px);
    background: rgba(255, 255, 255, 0.15);
    box-shadow: 0 8px 25px rgba(0,0,0,0.3);
    color: inherit;
    text-decoration: none;
  }

  .download-card.primary {
    border: 2px solid #ffd700;
    background: rgba(255, 215, 0, 0.15);
  }

  .download-card.primary:hover {
    background: rgba(255, 215, 0, 0.25);
  }

  .download-icon {
    font-size: 2.5rem;
    flex-shrink: 0;
  }

  .download-info {
    flex: 1;
  }

  .download-info h3 {
    margin: 0 0 0.5rem 0;
    font-size: 1.1rem;
    font-weight: 600;
  }

  .download-info p {
    margin: 0 0 0.5rem 0;
    opacity: 0.9;
    font-size: 0.9rem;
  }

  .file-size {
    background: rgba(255, 255, 255, 0.2);
    padding: 0.2rem 0.6rem;
    border-radius: 20px;
    font-size: 0.8rem;
    font-weight: 500;
    display: inline-block;
  }

  .download-indicator {
    font-size: 1.5rem;
    flex-shrink: 0;
    opacity: 0.8;
    transition: all 0.3s ease;
  }

  .download-card:hover .download-indicator {
    opacity: 1;
    transform: scale(1.2);
  }

  .download-note {
    background: rgba(255, 255, 255, 0.1);
    border-radius: 8px;
    padding: 1.2rem;
    border-left: 4px solid #ffd700;
  }

  .download-note p {
    margin: 0.5rem 0;
    font-size: 0.9rem;
    opacity: 0.9;
  }

  .download-note strong {
    color: #ffd700;
  }

  @media (max-width: 768px) {
    .download-section {
      padding: 1.5rem;
      margin: 1rem 0;
    }

    .download-grid {
      grid-template-columns: 1fr;
      gap: 1rem;
    }

    .download-card {
      flex-direction: column;
      text-align: center;
      gap: 1rem;
    }

    .download-info {
      order: 1;
    }

    .download-icon {
      order: 0;
      font-size: 3rem;
    }

    .download-indicator {
      order: 2;
      font-size: 2rem;
    }
  }
</style>
