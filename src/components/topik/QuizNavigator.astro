---
/**
 * Component QuizNavigator - Điều hướng quiz mode (từng câu một)
 * 
 * Chức năng:
 * - Hiển thị nút Previous/Next để điều hướng giữa các câu
 * - Mini-map grid hiển thị tất cả câu hỏi (1,2,3...) để jump nhanh
 * - Visual states: chưa làm (xám), đã làm (xanh), đúng (xanh đậm), sai (đỏ), câu hiện tại (viền)
 * - Keyboard support sẽ được xử lý ở component cha
 * 
 * Props:
 * - currentIndex: Index của câu hiện tại (0-based)
 * - totalQuestions: Tổng số câu hỏi
 * - answeredQuestions: Set<number> - Các câu đã trả lời
 * - correctQuestions: Set<number> - Các câu trả lời đúng (optional, khi đã submit)
 * - wrongQuestions: Set<number> - Các câu trả lời sai (optional, khi đã submit)
 * 
 * Events:
 * - navigate-prev: Chuyển về câu trước
 * - navigate-next: Chuyển đến câu tiếp
 * - jump-to: { index } - Jump đến câu cụ thể
 */

export interface Props {
  currentIndex: number;
  totalQuestions: number;
  answeredQuestions?: Set<number>;
  correctQuestions?: Set<number>;
  wrongQuestions?: Set<number>;
}

const { 
  currentIndex, 
  totalQuestions,
  answeredQuestions = new Set(),
  correctQuestions = new Set(),
  wrongQuestions = new Set()
} = Astro.props;

const isFirstQuestion = currentIndex === 0;
const isLastQuestion = currentIndex === totalQuestions - 1;
const questionNumbers = Array.from({ length: totalQuestions }, (_, i) => i);
---

<div class="quiz-navigator">
  <!-- Navigation controls -->
  <div class="nav-controls">
    <!-- Previous button -->
    <button
      type="button"
      class="nav-btn nav-prev"
      data-navigate="prev"
      disabled={isFirstQuestion}
      title="Câu trước (←)"
    >
      <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 19l-7-7 7-7"></path>
      </svg>
      <span class="nav-text">Trước</span>
    </button>
    
    <!-- Current question indicator -->
    <div class="current-indicator">
      <span class="current-number">{currentIndex + 1}</span>
      <span class="total-separator">/</span>
      <span class="total-number">{totalQuestions}</span>
    </div>
    
    <!-- Next button -->
    <button
      type="button"
      class="nav-btn nav-next"
      data-navigate="next"
      disabled={isLastQuestion}
      title="Câu sau (→)"
    >
      <span class="nav-text">Sau</span>
      <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7"></path>
      </svg>
    </button>
  </div>
  
  <!-- Mini-map grid -->
  <div class="question-grid">
    {questionNumbers.map((index) => {
      const isCurrent = index === currentIndex;
      const isAnswered = answeredQuestions.has(index);
      const isCorrect = correctQuestions.has(index);
      const isWrong = wrongQuestions.has(index);
      
      let className = 'grid-item';
      if (isCurrent) className += ' current';
      if (isCorrect) className += ' correct';
      else if (isWrong) className += ' wrong';
      else if (isAnswered) className += ' answered';
      
      return (
        <button
          type="button"
          class={className}
          data-jump-to={index}
          title={`Câu ${index + 1}${isAnswered ? ' (Đã làm)' : ''}`}
        >
          {index + 1}
        </button>
      );
    })}
  </div>
  
  <!-- Legend -->
  <div class="grid-legend">
    <div class="legend-item">
      <span class="legend-dot legend-current"></span>
      <span class="legend-label">Đang xem</span>
    </div>
    <div class="legend-item">
      <span class="legend-dot legend-answered"></span>
      <span class="legend-label">Đã làm</span>
    </div>
    {(correctQuestions.size > 0 || wrongQuestions.size > 0) && (
      <>
        <div class="legend-item">
          <span class="legend-dot legend-correct"></span>
          <span class="legend-label">Đúng</span>
        </div>
        <div class="legend-item">
          <span class="legend-dot legend-wrong"></span>
          <span class="legend-label">Sai</span>
        </div>
      </>
    )}
  </div>
</div>

<style>
  .quiz-navigator {
    background: white;
    border: 1px solid #e5e7eb;
    border-radius: 12px;
    padding: 1.25rem;
    box-shadow: 0 2px 8px rgba(0, 0, 0, 0.05);
  }

  .nav-controls {
    display: flex;
    align-items: center;
    justify-content: space-between;
    gap: 1rem;
    margin-bottom: 1.5rem;
  }

  .nav-btn {
    display: flex;
    align-items: center;
    gap: 0.5rem;
    padding: 0.625rem 1.25rem;
    background: linear-gradient(135deg, #f3f4f6 0%, #e5e7eb 100%);
    border: 1px solid #d1d5db;
    border-radius: 8px;
    font-weight: 600;
    color: #374151;
    cursor: pointer;
    transition: all 0.2s ease;
  }

  .nav-btn:hover:not(:disabled) {
    background: linear-gradient(135deg, #dbeafe 0%, #bfdbfe 100%);
    border-color: #3b82f6;
    color: #1e40af;
    transform: translateY(-2px);
    box-shadow: 0 4px 12px rgba(59, 130, 246, 0.2);
  }

  .nav-btn:active:not(:disabled) {
    transform: translateY(0);
  }

  .nav-btn:disabled {
    opacity: 0.4;
    cursor: not-allowed;
  }

  .nav-text {
    font-size: 0.875rem;
  }

  .current-indicator {
    display: flex;
    align-items: baseline;
    gap: 0.25rem;
    padding: 0.5rem 1rem;
    background: linear-gradient(135deg, #ede9fe 0%, #ddd6fe 100%);
    border: 2px solid #a78bfa;
    border-radius: 12px;
    font-weight: 700;
  }

  .current-number {
    font-size: 1.5rem;
    color: #6d28d9;
  }

  .total-separator {
    font-size: 1.125rem;
    color: #9333ea;
  }

  .total-number {
    font-size: 1.125rem;
    color: #7c3aed;
  }

  .question-grid {
    display: grid;
    grid-template-columns: repeat(auto-fill, minmax(3rem, 1fr));
    gap: 0.5rem;
    margin-bottom: 1rem;
  }

  .grid-item {
    aspect-ratio: 1;
    display: flex;
    align-items: center;
    justify-content: center;
    background: #f3f4f6;
    border: 2px solid #e5e7eb;
    border-radius: 8px;
    font-weight: 600;
    font-size: 0.875rem;
    color: #6b7280;
    cursor: pointer;
    transition: all 0.2s ease;
  }

  .grid-item:hover {
    background: #e0f2fe;
    border-color: #38bdf8;
    transform: scale(1.05);
    z-index: 1;
  }

  /* States */
  .grid-item.answered {
    background: #dbeafe;
    border-color: #60a5fa;
    color: #1e40af;
  }

  .grid-item.correct {
    background: #d1fae5;
    border-color: #34d399;
    color: #065f46;
  }

  .grid-item.wrong {
    background: #fee2e2;
    border-color: #f87171;
    color: #991b1b;
  }

  .grid-item.current {
    background: linear-gradient(135deg, #fef3c7 0%, #fde68a 100%);
    border: 3px solid #f59e0b;
    color: #92400e;
    font-size: 1rem;
    font-weight: 700;
    box-shadow: 0 0 0 3px rgba(245, 158, 11, 0.2);
    transform: scale(1.1);
    z-index: 2;
  }

  .grid-legend {
    display: flex;
    align-items: center;
    justify-content: center;
    gap: 1.5rem;
    flex-wrap: wrap;
    padding-top: 1rem;
    border-top: 1px solid #e5e7eb;
  }

  .legend-item {
    display: flex;
    align-items: center;
    gap: 0.5rem;
  }

  .legend-dot {
    width: 1rem;
    height: 1rem;
    border-radius: 4px;
    border: 2px solid;
  }

  .legend-current {
    background: linear-gradient(135deg, #fef3c7 0%, #fde68a 100%);
    border-color: #f59e0b;
  }

  .legend-answered {
    background: #dbeafe;
    border-color: #60a5fa;
  }

  .legend-correct {
    background: #d1fae5;
    border-color: #34d399;
  }

  .legend-wrong {
    background: #fee2e2;
    border-color: #f87171;
  }

  .legend-label {
    font-size: 0.875rem;
    color: #6b7280;
    font-weight: 500;
  }

  /* Responsive */
  @media (max-width: 640px) {
    .quiz-navigator {
      padding: 1rem;
    }

    .nav-controls {
      margin-bottom: 1rem;
    }

    .nav-btn {
      padding: 0.5rem 0.75rem;
    }

    .nav-text {
      display: none;
    }

    .current-number {
      font-size: 1.25rem;
    }

    .total-number {
      font-size: 1rem;
    }

    .question-grid {
      grid-template-columns: repeat(auto-fill, minmax(2.5rem, 1fr));
      gap: 0.375rem;
    }

    .grid-item {
      font-size: 0.75rem;
    }

    .grid-legend {
      gap: 1rem;
    }

    .legend-label {
      font-size: 0.75rem;
    }
  }
</style>

<script>
  document.addEventListener('DOMContentLoaded', () => {
    const navigator = document.querySelector('.quiz-navigator');
    if (!navigator) return;
    
    // Previous button
    const prevBtn = navigator.querySelector('[data-navigate="prev"]');
    if (prevBtn) {
      prevBtn.addEventListener('click', () => {
        const event = new CustomEvent('navigate-prev', { bubbles: true });
        navigator.dispatchEvent(event);
      });
    }
    
    // Next button
    const nextBtn = navigator.querySelector('[data-navigate="next"]');
    if (nextBtn) {
      nextBtn.addEventListener('click', () => {
        const event = new CustomEvent('navigate-next', { bubbles: true });
        navigator.dispatchEvent(event);
      });
    }
    
    // Jump to buttons
    const jumpButtons = navigator.querySelectorAll('[data-jump-to]');
    jumpButtons.forEach(btn => {
      btn.addEventListener('click', () => {
        const index = parseInt(btn.getAttribute('data-jump-to') || '0');
        const event = new CustomEvent('jump-to', { 
          detail: { index },
          bubbles: true 
        });
        navigator.dispatchEvent(event);
      });
    });
  });
</script>
