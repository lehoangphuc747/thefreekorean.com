---
/**
 * Component SettingsPanel - Panel tổng hợp tất cả cài đặt cho bài luyện tập TOPIK
 * 
 * Chức năng:
 * - Tích hợp các component con: ProgressBar
 * - Các toggle buttons cho settings:
 *   + Question order: Sequential vs Random
 *   + Check mode: Immediate vs Submit
 *   + Vietnamese translation: Show/Hide by default
 *   + Explain: Show/Hide explanation
 *   + Font size: Small/Medium/Large
 * - Reset button với confirm dialog
 * - Collapsible trên mobile để tiết kiệm không gian
 * - Emit events cho parent component xử lý
 * 
 * Props:
 * - Từ parent component để hiển thị stats
 * 
 * Events:
 * - settings-change: { setting, value } - Khi thay đổi bất kỳ setting nào
 * - reset-exercise: Khi click nút reset
 */

import ProgressBar from './ProgressBar.astro';

export interface Props {
  // Progress stats
  totalQuestions: number;
  answeredQuestions: number;
  correctAnswers: number;
  wrongAnswers: number;
  bookmarkedCount?: number;
  
  // Current settings (để hiển thị active state)
  questionOrder?: 'order' | 'random';
  checkMode?: 'immediate' | 'submit';
  showVietnamese?: boolean;
  showExplain?: boolean;
  fontSize?: 'small' | 'medium' | 'large';
  questionLimit?: number; // Số câu để học
  
  // Control visibility
  showProgressBar?: boolean;
}

const {
  totalQuestions,
  answeredQuestions,
  correctAnswers,
  wrongAnswers,
  bookmarkedCount = 0,
  questionOrder = 'order',
  checkMode = 'immediate',
  showVietnamese = false,
  showExplain = true,
  fontSize = 'medium',
  questionLimit = totalQuestions, // Mặc định là tổng số câu
  showProgressBar = true
} = Astro.props;
---

