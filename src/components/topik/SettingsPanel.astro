<script>
  document.addEventListener('DOMContentLoaded', () => {
    const panel = document.querySelector('[data-settings-panel]');
    if (!panel) return;
    
    const settingsCollapseToggle = document.querySelector('[data-settings-collapse-toggle]');
    const settingsPanelContent = panel.querySelector('[data-settings-panel-content]');
    
    // Settings panel collapse toggle
    if (settingsCollapseToggle && settingsPanelContent) {
      // Default collapsed
      settingsCollapseToggle.classList.add('collapsed');
      settingsPanelContent.classList.add('collapsed');
      panel.classList.add('collapsed');

      settingsCollapseToggle.addEventListener('click', () => {
        settingsCollapseToggle.classList.toggle('collapsed');
        settingsPanelContent.classList.toggle('collapsed');
        panel.classList.toggle('collapsed');
      });
    }
    
    // Handle question limit confirm button
    const questionLimitInput = document.getElementById('question-limit-input') as HTMLInputElement | null;
    const confirmBtn = panel.querySelector('[data-question-limit-confirm]') as HTMLButtonElement | null;
    
    // Function to validate and emit question limit change
    function confirmQuestionLimit() {
      if (!questionLimitInput) return;
      
      const setting = questionLimitInput.getAttribute('data-setting');
      if (!setting) return;
      
      const min = parseInt(questionLimitInput.getAttribute('min') || '1');
      const max = parseInt(questionLimitInput.getAttribute('max') || '999');
      const value = questionLimitInput.value;
      
      // Nếu để trống, set về min
      if (value === '') {
        questionLimitInput.value = min.toString();
        const event = new CustomEvent('settings-change', {
          detail: { setting, value: min },
          bubbles: true
        });
        panel.dispatchEvent(event);
        return;
      }
      
      const numValue = parseInt(value);
      let finalValue = numValue;
      
      // Clamp value to min-max range
      if (isNaN(numValue) || numValue < min) {
        finalValue = min;
        questionLimitInput.value = min.toString();
      } else if (numValue > max) {
        finalValue = max;
        questionLimitInput.value = max.toString();
      }
      
      // Emit event
      const event = new CustomEvent('settings-change', {
        detail: { setting, value: finalValue },
        bubbles: true
      });
      panel.dispatchEvent(event);
    }
    
    // Listen to Enter key on input
    if (questionLimitInput) {
      questionLimitInput.addEventListener('keydown', (e) => {
        if (e.key === 'Enter') {
          e.preventDefault();
          confirmQuestionLimit();
          questionLimitInput.blur();
        }
      });
      
      // Validate trong quá trình nhập (chỉ validate, không emit)
      questionLimitInput.addEventListener('input', () => {
        const min = parseInt(questionLimitInput.getAttribute('min') || '1');
        const max = parseInt(questionLimitInput.getAttribute('max') || '999');
        const value = questionLimitInput.value;
        
        // Cho phép xóa trống trong lúc nhập
        if (value === '') {
          return;
        }
        
        const numValue = parseInt(value);
        if (!isNaN(numValue)) {
          if (numValue > max) {
            questionLimitInput.value = max.toString();
          } else if (numValue < min) {
            questionLimitInput.value = min.toString();
          }
        }
      });
      
      // Handle blur - validate nhưng không emit (chỉ restore value)
      questionLimitInput.addEventListener('blur', () => {
        const min = parseInt(questionLimitInput.getAttribute('min') || '1');
        const max = parseInt(questionLimitInput.getAttribute('max') || '999');
        
        // Nếu để trống, set về min nhưng không emit
        if (questionLimitInput.value === '') {
          questionLimitInput.value = min.toString();
        } else {
          const numValue = parseInt(questionLimitInput.value);
          if (isNaN(numValue) || numValue < min) {
            questionLimitInput.value = min.toString();
          } else if (numValue > max) {
            questionLimitInput.value = max.toString();
          }
        }
      });
    }
    
    // Listen to confirm button click
    if (confirmBtn) {
      confirmBtn.addEventListener('click', confirmQuestionLimit);
    }
    
    // Setting buttons (không bao gồm question limit input nữa)
    const settingBtns = panel.querySelectorAll('[data-setting]:not(input)');
    settingBtns.forEach(btn => {
      // Handle button elements
      if (btn instanceof HTMLElement && !(btn instanceof HTMLInputElement)) {
        // Handle button elements
        btn.addEventListener('click', () => {
          const setting = btn.getAttribute('data-setting');
          const value = btn.getAttribute('data-value');
          
          if (!setting || !value) return;
          
          // Update active state for this setting group
          const group = btn.closest('.toggle-group');
          if (group) {
            group.querySelectorAll('.toggle-btn').forEach(b => b.classList.remove('active'));
            btn.classList.add('active');
          }
          
          // Parse value (handle boolean strings)
          let parsedValue: any = value;
          if (value === 'true') parsedValue = true;
          else if (value === 'false') parsedValue = false;
          
          // Emit event
          const event = new CustomEvent('settings-change', {
            detail: { setting, value: parsedValue },
            bubbles: true
          });
          panel.dispatchEvent(event);
        });
      }
    });
    
    // Reset button
    const resetBtn = panel.querySelector('[data-reset-btn]');
    if (resetBtn) {
      resetBtn.addEventListener('click', () => {
        if (confirm('Bạn chắc chắn muốn làm lại bài tập?\n\nTất cả đáp án sẽ bị xóa, nhưng các câu đã đánh dấu sẽ được giữ lại.')) {
          const event = new CustomEvent('reset-exercise', {
            bubbles: true
          });
          panel.dispatchEvent(event);
        }
      });
    }
  });
</script>


