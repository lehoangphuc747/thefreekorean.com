              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z"></path>
            </svg>
            <span>Sau</span>
          </button>
        </div>
      </div>
      <!-- Vietnamese Translation -->
      <div class="setting-group">
        <label class="setting-label">Dịch câu hỏi:</label>
        <div class="toggle-group compact" role="group">
          <button
            type="button"
            class={`toggle-btn ${!showVietnamese ? 'active' : ''}`}
            data-setting="showVietnamese"
            data-value="false"
          >
            <span>Ẩn</span>
          </button>
          <button
            type="button"
            class={`toggle-btn ${showVietnamese ? 'active' : ''}`}
            data-setting="showVietnamese"
            data-value="true"
          >
            <span>Hiện</span>
          </button>
        </div>
      </div>
      <!-- Show Explain -->
      <div class="setting-group">
        <label class="setting-label">Giải thích:</label>
        <div class="toggle-group compact" role="group">
          <button
            type="button"
            class={`toggle-btn ${!showExplain ? 'active' : ''}`}
            data-setting="showExplain"
            data-value="false"
          >
            <span>Ẩn</span>
          </button>
