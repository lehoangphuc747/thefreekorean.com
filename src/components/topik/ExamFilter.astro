---
/**
 * Component ExamFilter - Lọc câu hỏi theo kỳ thi
 * 
 * Chức năng:
 * - Dropdown hoặc button group để chọn kỳ thi
 * - Option "Tất cả kỳ thi" + các kỳ thi riêng lẻ
 * - Hiển thị số lượng câu hỏi cho mỗi kỳ thi
 * - Active state cho lựa chọn hiện tại
 * 
 * Props:
 * - exams: Array<{ name: string, count: number }> - Danh sách kỳ thi và số câu
 * - selectedExam: string - Kỳ thi đang chọn ('all' hoặc tên kỳ thi)
 * 
 * Events:
 * - exam-change: { exam: string } - Khi chọn kỳ thi mới
 */

export interface ExamInfo {
  name: string;
  count: number;
}

export interface Props {
  exams: ExamInfo[];
  selectedExam?: string;
}

const { exams, selectedExam = 'all' } = Astro.props;

const totalCount = exams.reduce((sum, exam) => sum + exam.count, 0);
const hasMultipleExams = exams.length > 1;
---

{hasMultipleExams && (
  <div class="exam-filter">
    <div class="filter-header">
      <svg class="w-5 h-5 text-indigo-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 4a1 1 0 011-1h16a1 1 0 011 1v2.586a1 1 0 01-.293.707l-6.414 6.414a1 1 0 00-.293.707V17l-4 4v-6.586a1 1 0 00-.293-.707L3.293 7.293A1 1 0 013 6.586V4z"></path>
      </svg>
      <span class="filter-label">Lọc theo kỳ thi:</span>
    </div>
    
    <div class="filter-options" role="group">
      <!-- All exams option -->
      <button
        type="button"
        class={`filter-btn ${selectedExam === 'all' ? 'active' : ''}`}
        data-exam="all"
      >
        <span class="filter-text">Tất cả</span>
        <span class="filter-count">{totalCount}</span>
      </button>
      
      <!-- Individual exam options -->
      {exams.map((exam) => (
        <button
          type="button"
          class={`filter-btn ${selectedExam === exam.name ? 'active' : ''}`}
          data-exam={exam.name}
        >
          <span class="filter-text">{exam.name.toUpperCase()}</span>
          <span class="filter-count">{exam.count}</span>
        </button>
      ))}
    </div>
  </div>
)}

<style>
  .exam-filter {
    background: white;
    border: 1px solid #e5e7eb;
    border-radius: 12px;
    padding: 1rem 1.25rem;
    box-shadow: 0 2px 8px rgba(0, 0, 0, 0.05);
  }

  .filter-header {
    display: flex;
    align-items: center;
    gap: 0.5rem;
    margin-bottom: 0.75rem;
  }

  .filter-label {
    font-size: 0.875rem;
    font-weight: 600;
    color: #374151;
  }

  .filter-options {
    display: flex;
    align-items: center;
    gap: 0.5rem;
    flex-wrap: wrap;
  }

  .filter-btn {
    display: flex;
    align-items: center;
    gap: 0.5rem;
    padding: 0.625rem 1rem;
    background: #f9fafb;
    border: 2px solid #e5e7eb;
    border-radius: 8px;
    font-weight: 600;
    cursor: pointer;
    transition: all 0.2s ease;
  }

  .filter-btn:hover {
    background: #f3f4f6;
    border-color: #d1d5db;
    transform: translateY(-2px);
  }

  .filter-btn.active {
    background: linear-gradient(135deg, #dbeafe 0%, #bfdbfe 100%);
    border-color: #3b82f6;
    color: #1e40af;
    box-shadow: 0 4px 12px rgba(59, 130, 246, 0.2);
  }

  .filter-btn.active:hover {
    background: linear-gradient(135deg, #bfdbfe 0%, #93c5fd 100%);
    border-color: #2563eb;
  }

  .filter-text {
    font-size: 0.875rem;
  }

  .filter-count {
    display: inline-flex;
    align-items: center;
    justify-content: center;
    min-width: 1.5rem;
    padding: 0.125rem 0.5rem;
    background: #e5e7eb;
    border-radius: 9999px;
    font-size: 0.75rem;
    font-weight: 700;
    color: #6b7280;
  }

  .filter-btn.active .filter-count {
    background: #3b82f6;
    color: white;
  }

  /* Responsive */
  @media (max-width: 640px) {
    .exam-filter {
      padding: 0.875rem 1rem;
    }

    .filter-header {
      margin-bottom: 0.625rem;
    }

    .filter-label {
      font-size: 0.8125rem;
    }

    .filter-btn {
      padding: 0.5rem 0.75rem;
      gap: 0.375rem;
    }

    .filter-text {
      font-size: 0.8125rem;
    }

    .filter-count {
      min-width: 1.25rem;
      padding: 0.125rem 0.375rem;
      font-size: 0.6875rem;
    }
  }
</style>

<script>
  document.addEventListener('DOMContentLoaded', () => {
    const filter = document.querySelector('.exam-filter');
    if (!filter) return;
    
    const buttons = filter.querySelectorAll('[data-exam]');
    
    buttons.forEach(btn => {
      btn.addEventListener('click', () => {
        const exam = btn.getAttribute('data-exam');
        if (!exam) return;
        
        // Remove active class from all buttons
        buttons.forEach(b => b.classList.remove('active'));
        
        // Add active class to clicked button
        btn.classList.add('active');
        
        // Emit event
        const event = new CustomEvent('exam-change', {
          detail: { exam },
          bubbles: true
        });
        filter.dispatchEvent(event);
      });
    });
  });
</script>
