---
/**
 * Component ProgressBar - Hiển thị tiến độ làm bài TOPIK
 * 
 * Chức năng:
 * - Hiển thị progress bar với % hoàn thành
 * - Badge thống kê: X/Y câu đã làm, Z% đúng
 * - Màu sắc phân loại: xanh (đúng), đỏ (sai), xám (chưa làm)
 * - Responsive design cho mobile
 * - Smooth animation khi update
 * 
 * Props:
 * - totalQuestions: Tổng số câu hỏi
 * - answeredQuestions: Số câu đã trả lời
 * - correctAnswers: Số câu trả lời đúng
 * - wrongAnswers: Số câu trả lời sai
 * - bookmarkedCount: Số câu đã bookmark (optional)
 */

export interface Props {
  totalQuestions: number;
  answeredQuestions: number;
  correctAnswers: number;
  wrongAnswers: number;
  bookmarkedCount?: number;
}

const { 
  totalQuestions, 
  answeredQuestions, 
  correctAnswers, 
  wrongAnswers,
  bookmarkedCount = 0
} = Astro.props;

// Tính toán các giá trị
const unanswered = totalQuestions - answeredQuestions;
const answeredPercent = totalQuestions > 0 ? Math.round((answeredQuestions / totalQuestions) * 100) : 0;
const correctPercent = answeredQuestions > 0 ? Math.round((correctAnswers / answeredQuestions) * 100) : 0;
const correctBarWidth = totalQuestions > 0 ? (correctAnswers / totalQuestions) * 100 : 0;
const wrongBarWidth = totalQuestions > 0 ? (wrongAnswers / totalQuestions) * 100 : 0;
const unansweredBarWidth = totalQuestions > 0 ? (unanswered / totalQuestions) * 100 : 0;
---

<div class="progress-container">
  <!-- Header với tổng quan -->
  <div class="progress-header">
    <div class="progress-title">
      <svg class="w-5 h-5 text-indigo-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 19v-6a2 2 0 00-2-2H5a2 2 0 00-2 2v6a2 2 0 002 2h2a2 2 0 002-2zm0 0V9a2 2 0 012-2h2a2 2 0 012 2v10m-6 0a2 2 0 002 2h2a2 2 0 002-2m0 0V5a2 2 0 012-2h2a2 2 0 012 2v14a2 2 0 01-2 2h-2a2 2 0 01-2-2z"></path>
      </svg>
      <h3 class="text-base font-semibold text-gray-800">Tiến độ</h3>
    </div>
    
    <!-- Stats badges -->
    <div class="stats-badges">
      <!-- Tổng số câu -->
      <div class="stat-badge stat-total">
        <span class="stat-label">Tổng</span>
        <span class="stat-value">{totalQuestions}</span>
      </div>
      
      <!-- Đã làm -->
      <div class="stat-badge stat-answered">
        <span class="stat-label">Đã làm</span>
        <span class="stat-value">{answeredQuestions}/{totalQuestions}</span>
      </div>
      
      <!-- Đúng -->
      {answeredQuestions > 0 && (
        <div class="stat-badge stat-correct">
          <span class="stat-icon">✓</span>
          <span class="stat-value">{correctAnswers}</span>
          <span class="stat-percent">({correctPercent}%)</span>
        </div>
      )}
      
      <!-- Sai -->
      {wrongAnswers > 0 && (
        <div class="stat-badge stat-wrong">
          <span class="stat-icon">✗</span>
          <span class="stat-value">{wrongAnswers}</span>
        </div>
      )}
      
      <!-- Bookmark -->
      {bookmarkedCount > 0 && (
        <div class="stat-badge stat-bookmark">
          <span class="stat-icon">⭐</span>
          <span class="stat-value">{bookmarkedCount}</span>
        </div>
      )}
    </div>
  </div>
  
  <!-- Progress bar -->
  <div class="progress-bar-wrapper">
    <div class="progress-bar-bg">
      <!-- Correct segment (green) -->
      {correctBarWidth > 0 && (
        <div 
          class="progress-segment progress-correct" 
          style={`width: ${correctBarWidth}%`}
          title={`${correctAnswers} câu đúng`}
        ></div>
      )}
      
      <!-- Wrong segment (red) -->
      {wrongBarWidth > 0 && (
        <div 
          class="progress-segment progress-wrong" 
          style={`width: ${wrongBarWidth}%; left: ${correctBarWidth}%`}
          title={`${wrongAnswers} câu sai`}
        ></div>
      )}
      
      <!-- Unanswered segment (gray) - fills the rest -->
    </div>
    
    <!-- Percentage label -->
    <div class="progress-label">
      <span class="progress-percent">{answeredPercent}%</span>
      <span class="progress-text">hoàn thành</span>
    </div>
  </div>
  
  <!-- Legend (chú thích) -->
  {answeredQuestions > 0 && (
    <div class="progress-legend">
      <div class="legend-item">
        <span class="legend-color legend-correct"></span>
        <span class="legend-text">Đúng ({correctAnswers})</span>
      </div>
      <div class="legend-item">
        <span class="legend-color legend-wrong"></span>
        <span class="legend-text">Sai ({wrongAnswers})</span>
      </div>
      <div class="legend-item">
        <span class="legend-color legend-unanswered"></span>
        <span class="legend-text">Chưa làm ({unanswered})</span>
      </div>
    </div>
  )}
</div>

<style>
  .progress-container {
    background: linear-gradient(135deg, #f8fafc 0%, #f1f5f9 100%);
    border: 1px solid #e2e8f0;
    border-radius: 12px;
    padding: 1.25rem;
    box-shadow: 0 2px 8px rgba(0, 0, 0, 0.05);
  }

  .progress-header {
    display: flex;
    align-items: center;
    justify-content: space-between;
    margin-bottom: 1rem;
    gap: 1rem;
    flex-wrap: wrap;
  }

  .progress-title {
    display: flex;
    align-items: center;
    gap: 0.5rem;
  }

  .stats-badges {
    display: flex;
    align-items: center;
    gap: 0.5rem;
    flex-wrap: wrap;
  }

  .stat-badge {
    display: flex;
    align-items: center;
    gap: 0.375rem;
    padding: 0.375rem 0.75rem;
    border-radius: 8px;
    font-size: 0.875rem;
    font-weight: 600;
    transition: transform 0.2s ease;
  }

  .stat-badge:hover {
    transform: translateY(-2px);
  }

  .stat-total {
    background: #e0e7ff;
    color: #4338ca;
  }

  .stat-answered {
    background: #dbeafe;
    color: #1e40af;
  }

  .stat-correct {
    background: #d1fae5;
    color: #065f46;
  }

  .stat-wrong {
    background: #fee2e2;
    color: #991b1b;
  }

  .stat-bookmark {
    background: #fef3c7;
    color: #92400e;
  }

  .stat-label {
    font-size: 0.75rem;
    opacity: 0.8;
  }

  .stat-value {
    font-weight: 700;
  }

  .stat-icon {
    font-size: 1rem;
  }

  .stat-percent {
    font-size: 0.75rem;
    opacity: 0.8;
  }

  .progress-bar-wrapper {
    position: relative;
    margin-bottom: 1rem;
  }

  .progress-bar-bg {
    position: relative;
    width: 100%;
    height: 2rem;
    background: #e2e8f0;
    border-radius: 9999px;
    overflow: hidden;
    box-shadow: inset 0 2px 4px rgba(0, 0, 0, 0.06);
  }

  .progress-segment {
    position: absolute;
    top: 0;
    height: 100%;
    transition: width 0.5s ease, left 0.5s ease;
  }

  .progress-correct {
    background: linear-gradient(90deg, #10b981 0%, #059669 100%);
    left: 0;
    box-shadow: inset 0 2px 4px rgba(255, 255, 255, 0.2);
  }

  .progress-wrong {
    background: linear-gradient(90deg, #ef4444 0%, #dc2626 100%);
    box-shadow: inset 0 2px 4px rgba(255, 255, 255, 0.2);
  }

  .progress-label {
    position: absolute;
    top: 50%;
    left: 50%;
    transform: translate(-50%, -50%);
    display: flex;
    align-items: center;
    gap: 0.375rem;
    font-weight: 700;
    color: #1e293b;
    text-shadow: 0 1px 2px rgba(255, 255, 255, 0.8);
    pointer-events: none;
  }

  .progress-percent {
    font-size: 1rem;
  }

  .progress-text {
    font-size: 0.75rem;
    opacity: 0.8;
  }

  .progress-legend {
    display: flex;
    align-items: center;
    justify-content: center;
    gap: 1.5rem;
    flex-wrap: wrap;
    padding-top: 0.75rem;
    border-top: 1px solid #e2e8f0;
  }

  .legend-item {
    display: flex;
    align-items: center;
    gap: 0.5rem;
  }

  .legend-color {
    width: 1rem;
    height: 1rem;
    border-radius: 4px;
  }

  .legend-correct {
    background: linear-gradient(135deg, #10b981 0%, #059669 100%);
  }

  .legend-wrong {
    background: linear-gradient(135deg, #ef4444 0%, #dc2626 100%);
  }

  .legend-unanswered {
    background: #e2e8f0;
  }

  .legend-text {
    font-size: 0.875rem;
    color: #64748b;
    font-weight: 500;
  }

  /* Responsive */
  @media (max-width: 640px) {
    .progress-container {
      padding: 1rem;
    }

    .progress-header {
      flex-direction: column;
      align-items: flex-start;
    }

    .stats-badges {
      width: 100%;
      justify-content: space-between;
    }

    .stat-badge {
      padding: 0.25rem 0.5rem;
      font-size: 0.75rem;
    }

    .progress-bar-bg {
      height: 1.5rem;
    }

    .progress-percent {
      font-size: 0.875rem;
    }

    .progress-text {
      font-size: 0.625rem;
    }

    .progress-legend {
      gap: 1rem;
    }

    .legend-text {
      font-size: 0.75rem;
    }
  }

  /* Animation */
  @keyframes slideIn {
    from {
      width: 0;
    }
  }

  .progress-segment {
    animation: slideIn 0.8s ease-out;
  }
</style>
