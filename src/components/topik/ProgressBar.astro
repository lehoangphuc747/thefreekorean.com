---
/**
 * Component ProgressBar - Hiển thị tiến độ làm bài TOPIK
 * 
 * Chức năng:
 * - Hiển thị progress bar với % hoàn thành
 * - Badge thống kê: X/Y câu đã làm, Z% đúng
 * - Màu sắc phân loại: xanh (đúng), đỏ (sai), xám (chưa làm)
 * - Responsive design cho mobile
 * - Smooth animation khi update
 * 
 * Props:
 * - totalQuestions: Tổng số câu hỏi
 * - answeredQuestions: Số câu đã trả lời
 * - correctAnswers: Số câu trả lời đúng
 * - wrongAnswers: Số câu trả lời sai
 * - bookmarkedCount: Số câu đã bookmark (optional)
 */

export interface Props {
  totalQuestions: number;
  answeredQuestions: number;
  correctAnswers: number;
  wrongAnswers: number;
  bookmarkedCount?: number;
}

const { 
  totalQuestions, 
  answeredQuestions, 
  correctAnswers, 
  wrongAnswers,
  bookmarkedCount = 0
} = Astro.props;

// Tính toán các giá trị
const unanswered = totalQuestions - answeredQuestions;
const answeredPercent = totalQuestions > 0 ? Math.round((answeredQuestions / totalQuestions) * 100) : 0;
const correctPercent = answeredQuestions > 0 ? Math.round((correctAnswers / answeredQuestions) * 100) : 0;

// Segments for progress bar
const correctBarWidth = totalQuestions > 0 ? (correctAnswers / totalQuestions) * 100 : 0;
const wrongBarWidth = totalQuestions > 0 ? (wrongAnswers / totalQuestions) * 100 : 0;
// Selected but not yet graded (answered - correct - wrong) = blue segment
const selectedNotGraded = answeredQuestions - correctAnswers - wrongAnswers;
const selectedBarWidth = totalQuestions > 0 ? (selectedNotGraded / totalQuestions) * 100 : 0;
const unansweredBarWidth = totalQuestions > 0 ? (unanswered / totalQuestions) * 100 : 0;
---

<div class="progress-bar-wrapper" data-progress-wrapper>
  <div class="progress-bar-bg">
    <!-- Correct segment (green) -->
    <div 
      class="progress-segment progress-correct" 
      style={`width: ${correctBarWidth}%`}
      title={`${correctAnswers} câu đúng`}
      data-correct-segment
    ></div>
    
    <!-- Wrong segment (red) -->
    <div 
      class="progress-segment progress-wrong" 
      style={`width: ${wrongBarWidth}%; left: ${correctBarWidth}%`}
      title={`${wrongAnswers} câu sai`}
      data-wrong-segment
    ></div>
    
    <!-- Selected but not graded segment (blue) - for submit mode -->
    <div 
      class="progress-segment progress-selected" 
      style={`width: ${selectedBarWidth}%; left: ${correctBarWidth + wrongBarWidth}%`}
      title={`${selectedNotGraded} câu đã chọn`}
      data-selected-segment
    ></div>
  </div>
  
  <!-- Progress text overlay -->
  <div class="progress-text-overlay">
    <span class="progress-count" data-progress-count>{answeredQuestions}/{totalQuestions}</span>
    <span class="progress-percent" data-progress-percent>{answeredPercent}%</span>
  </div>
</div>

<script>
  // Listen to progress-update events from TopikExercise
  document.addEventListener('progress-update', (e: Event) => {
    const event = e as CustomEvent;
    const { answeredCount, correctCount, wrongCount, total } = event.detail;
    
    const wrapper = document.querySelector('[data-progress-wrapper]');
    if (!wrapper) return;
    
    const correctSegment = wrapper.querySelector('[data-correct-segment]') as HTMLElement;
    const wrongSegment = wrapper.querySelector('[data-wrong-segment]') as HTMLElement;
    const selectedSegment = wrapper.querySelector('[data-selected-segment]') as HTMLElement;
    const countEl = wrapper.querySelector('[data-progress-count]');
    const percentEl = wrapper.querySelector('[data-progress-percent]');
    
    if (!correctSegment || !wrongSegment || !selectedSegment || !countEl || !percentEl) return;
    
    // Calculate percentages
    const correctWidth = total > 0 ? (correctCount / total) * 100 : 0;
    const wrongWidth = total > 0 ? (wrongCount / total) * 100 : 0;
    const selectedNotGraded = answeredCount - correctCount - wrongCount;
    const selectedWidth = total > 0 ? (selectedNotGraded / total) * 100 : 0;
    const answeredPercent = total > 0 ? Math.round((answeredCount / total) * 100) : 0;
    
    // Update segments
    correctSegment.style.width = `${correctWidth}%`;
    correctSegment.title = `${correctCount} câu đúng`;
    
    wrongSegment.style.width = `${wrongWidth}%`;
    wrongSegment.style.left = `${correctWidth}%`;
    wrongSegment.title = `${wrongCount} câu sai`;
    
    selectedSegment.style.width = `${selectedWidth}%`;
    selectedSegment.style.left = `${correctWidth + wrongWidth}%`;
    selectedSegment.title = `${selectedNotGraded} câu đã chọn`;
    
    // Update text
    countEl.textContent = `${answeredCount}/${total}`;
    percentEl.textContent = `${answeredPercent}%`;
  });
</script>

<style>
  .progress-bar-wrapper {
    position: relative;
    width: 100%;
  }

  .progress-bar-bg {
    position: relative;
    width: 100%;
    height: 2rem;
    background: #e2e8f0;
    overflow: hidden;
  }

  .progress-segment {
    position: absolute;
    top: 0;
    height: 100%;
    transition: width 0.5s ease, left 0.5s ease;
    animation: slideIn 0.8s ease-out;
  }

  .progress-correct {
    background: linear-gradient(90deg, #10b981 0%, #059669 100%);
    left: 0;
  }

  .progress-wrong {
    background: linear-gradient(90deg, #ef4444 0%, #dc2626 100%);
  }
  
  .progress-selected {
    background: linear-gradient(90deg, #3b82f6 0%, #2563eb 100%);
  }

  /* Progress text overlay */
  .progress-text-overlay {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    display: flex;
    align-items: center;
    justify-content: center;
    gap: 0.75rem;
    font-weight: 700;
    color: #1e293b;
    text-shadow: 0 1px 3px rgba(255, 255, 255, 0.9), 0 1px 2px rgba(0, 0, 0, 0.1);
    pointer-events: none;
  }

  .progress-count {
    font-size: 0.875rem;
    letter-spacing: 0.025em;
  }

  .progress-percent {
    font-size: 1rem;
    color: #0f172a;
  }

  /* Responsive */
  @media (max-width: 640px) {
    .progress-bar-bg {
      height: 1.75rem;
    }

    .progress-count {
      font-size: 0.75rem;
    }

    .progress-percent {
      font-size: 0.875rem;
    }

    .progress-text-overlay {
      gap: 0.5rem;
    }
  }

  @media (max-width: 480px) {
    .progress-bar-bg {
      height: 1.5rem;
    }

    .progress-count {
      font-size: 0.625rem;
    }

    .progress-percent {
      font-size: 0.75rem;
    }
  }

  /* Animation */
  @keyframes slideIn {
    from {
      width: 0;
    }
  }
</style>
