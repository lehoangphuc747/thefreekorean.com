---
/**
 * Component TimerCountdown - Đồng hồ đếm ngược cho bài luyện tập TOPIK
 * 
 * Chức năng:
 * - Hiển thị thời gian đếm ngược theo format MM:SS
 * - Cảnh báo màu sắc: vàng (còn ≤2 phút), đỏ (còn ≤1 phút)
 * - Nút Pause/Resume để tạm dừng/tiếp tục
 * - Auto-submit khi hết giờ (emit event 'time-up')
 * - Lưu thời gian còn lại vào localStorage khi pause hoặc reload
 * - Restore thời gian từ localStorage khi component mount
 * 
 * Props:
 * - initialMinutes: Số phút ban đầu (default: 15)
 * - storageKey: Key để lưu localStorage (default: 'topik-timer')
 * - autoStart: Tự động bắt đầu khi mount (default: true)
 * 
 * Events:
 * - time-up: Emit khi hết giờ
 * - tick: Emit mỗi giây với timeRemaining
 */

export interface Props {
  initialMinutes?: number;
  storageKey?: string;
  autoStart?: boolean;
}

const { 
  initialMinutes = 15, 
  storageKey = 'topik-timer',
  autoStart = true 
} = Astro.props;
---

<div class="timer-container" data-storage-key={storageKey}>
  <div class="timer-display">
    <!-- Icon đồng hồ -->
    <svg class="timer-icon" fill="none" stroke="currentColor" viewBox="0 0 24 24">
      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4l3 3m6-3a9 9 0 11-18 0 9 9 0 0118 0z"></path>
    </svg>
    
    <!-- Thời gian -->
    <span class="time-text" data-time-display>
      {String(initialMinutes).padStart(2, '0')}:00
    </span>
    
    <!-- Pause/Resume button -->
    <button 
      type="button"
      class="timer-btn pause-btn"
      data-pause-btn
      title="Tạm dừng"
    >
      <!-- Pause icon -->
      <svg class="pause-icon" fill="none" stroke="currentColor" viewBox="0 0 24 24">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 9v6m4-6v6m7-3a9 9 0 11-18 0 9 9 0 0118 0z"></path>
      </svg>
      <!-- Resume icon (hidden initially) -->
      <svg class="resume-icon hidden" fill="none" stroke="currentColor" viewBox="0 0 24 24">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M14.752 11.168l-3.197-2.132A1 1 0 0010 9.87v4.263a1 1 0 001.555.832l3.197-2.132a1 1 0 000-1.664z"></path>
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M21 12a9 9 0 11-18 0 9 9 0 0118 0z"></path>
      </svg>
    </button>
    
    <!-- Reset button -->
    <button 
      type="button"
      class="timer-btn reset-btn"
      data-reset-btn
      title="Đặt lại"
    >
      <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 4v5h.582m15.356 2A8.001 8.001 0 004.582 9m0 0H9m11 11v-5h-.581m0 0a8.003 8.003 0 01-15.357-2m15.357 2H15"></path>
      </svg>
    </button>
  </div>
  
  <!-- Warning message (hiện khi còn ít thời gian) -->
  <div class="warning-message hidden" data-warning-msg>
    <span class="warning-icon">⚠️</span>
    <span class="warning-text">Sắp hết giờ!</span>
  </div>
</div>

<style>
  .timer-container {
    display: flex;
    flex-direction: column;
    gap: 0.5rem;
    align-items: center;
  }

  .timer-display {
    display: flex;
    align-items: center;
    gap: 0.75rem;
    padding: 0.75rem 1.25rem;
    background: linear-gradient(135deg, #f0f9ff 0%, #e0f2fe 100%);
    border: 2px solid #bae6fd;
    border-radius: 12px;
    box-shadow: 0 2px 8px rgba(14, 165, 233, 0.15);
    transition: all 0.3s ease;
  }

  .timer-icon {
    width: 1.5rem;
    height: 1.5rem;
    color: #0284c7;
  }

  .time-text {
    font-family: 'Courier New', monospace;
    font-size: 1.5rem;
    font-weight: 700;
    color: #0c4a6e;
    min-width: 5rem;
    text-align: center;
  }

  .timer-btn {
    padding: 0.5rem;
    background: white;
    border: 1px solid #bae6fd;
    border-radius: 8px;
    cursor: pointer;
    transition: all 0.2s ease;
    display: flex;
    align-items: center;
    justify-content: center;
  }

  .timer-btn:hover {
    background: #f0f9ff;
    border-color: #0284c7;
    transform: scale(1.05);
  }

  .timer-btn:active {
    transform: scale(0.95);
  }

  .timer-btn svg {
    width: 1.25rem;
    height: 1.25rem;
    color: #0284c7;
  }

  .warning-message {
    display: flex;
    align-items: center;
    gap: 0.5rem;
    padding: 0.5rem 1rem;
    background: #fef3c7;
    border: 1px solid #fcd34d;
    border-radius: 8px;
    animation: pulse 1.5s ease-in-out infinite;
  }

  .warning-icon {
    font-size: 1.25rem;
  }

  .warning-text {
    font-size: 0.875rem;
    font-weight: 600;
    color: #92400e;
  }

  /* States */
  .timer-display.warning {
    background: linear-gradient(135deg, #fef3c7 0%, #fde68a 100%);
    border-color: #fcd34d;
  }

  .timer-display.warning .timer-icon,
  .timer-display.warning .time-text,
  .timer-display.warning .timer-btn svg {
    color: #d97706;
  }

  .timer-display.danger {
    background: linear-gradient(135deg, #fee2e2 0%, #fecaca 100%);
    border-color: #fca5a5;
    animation: shake 0.5s ease-in-out infinite;
  }

  .timer-display.danger .timer-icon,
  .timer-display.danger .time-text,
  .timer-display.danger .timer-btn svg {
    color: #dc2626;
  }

  .timer-display.paused {
    opacity: 0.7;
  }

  .hidden {
    display: none !important;
  }

  @keyframes pulse {
    0%, 100% {
      opacity: 1;
    }
    50% {
      opacity: 0.7;
    }
  }

  @keyframes shake {
    0%, 100% {
      transform: translateX(0);
    }
    25% {
      transform: translateX(-2px);
    }
    75% {
      transform: translateX(2px);
    }
  }

  @media (max-width: 640px) {
    .timer-display {
      padding: 0.5rem 1rem;
      gap: 0.5rem;
    }

    .time-text {
      font-size: 1.25rem;
      min-width: 4rem;
    }

    .timer-icon {
      width: 1.25rem;
      height: 1.25rem;
    }

    .timer-btn svg {
      width: 1rem;
      height: 1rem;
    }
  }
</style>

<script define:vars={{ initialMinutes, storageKey, autoStart }}>
  (function() {
    const container = document.querySelector('.timer-container');
    if (!container) return;
    
    const display = container.querySelector('.timer-display');
    const timeDisplay = container.querySelector('[data-time-display]');
    const pauseBtn = container.querySelector('[data-pause-btn]');
    const resetBtn = container.querySelector('[data-reset-btn]');
    const warningMsg = container.querySelector('[data-warning-msg]');
    const pauseIcon = pauseBtn?.querySelector('.pause-icon');
    const resumeIcon = pauseBtn?.querySelector('.resume-icon');
    
    if (!display || !timeDisplay || !pauseBtn || !resetBtn) return;
    
    let totalSeconds = initialMinutes * 60;
    let timeRemaining = totalSeconds;
    let isPaused = !autoStart;
    let intervalId = null;
    
    // Load saved time from localStorage
    function loadSavedTime() {
      try {
        const saved = localStorage.getItem(storageKey);
        if (saved) {
          const data = JSON.parse(saved);
          if (data.timeRemaining && data.timeRemaining > 0) {
            timeRemaining = data.timeRemaining;
            isPaused = data.isPaused || false;
          }
        }
      } catch (e) {
        console.error('Error loading timer state:', e);
      }
    }
    
    // Save time to localStorage
    function saveTime() {
      try {
        localStorage.setItem(storageKey, JSON.stringify({
          timeRemaining,
          isPaused,
          timestamp: Date.now()
        }));
      } catch (e) {
        console.error('Error saving timer state:', e);
      }
    }
    
    // Format time as MM:SS
    function formatTime(seconds) {
      const mins = Math.floor(seconds / 60);
      const secs = seconds % 60;
      return `${String(mins).padStart(2, '0')}:${String(secs).padStart(2, '0')}`;
    }
    
    // Update display
    function updateDisplay() {
      timeDisplay.textContent = formatTime(timeRemaining);
      
      // Update visual states
      display.classList.remove('warning', 'danger');
      if (warningMsg) warningMsg.classList.add('hidden');
      
      if (timeRemaining <= 60) {
        // Danger: ≤ 1 minute
        display.classList.add('danger');
        if (warningMsg) warningMsg.classList.remove('hidden');
      } else if (timeRemaining <= 120) {
        // Warning: ≤ 2 minutes
        display.classList.add('warning');
      }
      
      // Update paused state
      if (isPaused) {
        display.classList.add('paused');
      } else {
        display.classList.remove('paused');
      }
      
      // Emit tick event
      const tickEvent = new CustomEvent('timer-tick', {
        detail: { timeRemaining, isPaused },
        bubbles: true
      });
      container.dispatchEvent(tickEvent);
    }
    
    // Start timer
    function start() {
      if (intervalId) return;
      
      isPaused = false;
      intervalId = setInterval(() => {
        if (isPaused) return;
        
        timeRemaining--;
        updateDisplay();
        saveTime();
        
        if (timeRemaining <= 0) {
          stop();
          // Emit time-up event
          const timeUpEvent = new CustomEvent('time-up', {
            bubbles: true
          });
          container.dispatchEvent(timeUpEvent);
          
          // Alert user
          if (confirm('Hết giờ! Bạn có muốn nộp bài không?')) {
            // Parent component sẽ xử lý submit
          }
        }
      }, 1000);
      
      updatePauseButton();
    }
    
    // Stop timer
    function stop() {
      if (intervalId) {
        clearInterval(intervalId);
        intervalId = null;
      }
      isPaused = true;
      updateDisplay();
      saveTime();
      updatePauseButton();
    }
    
    // Toggle pause/resume
    function togglePause() {
      if (isPaused) {
        start();
      } else {
        stop();
      }
    }
    
    // Reset timer
    function reset() {
      if (confirm('Bạn có chắc chắn muốn đặt lại đồng hồ?')) {
        stop();
        timeRemaining = totalSeconds;
        updateDisplay();
        saveTime();
        if (autoStart) {
          start();
        }
      }
    }
    
    // Update pause button icon
    function updatePauseButton() {
      if (isPaused) {
        pauseIcon?.classList.add('hidden');
        resumeIcon?.classList.remove('hidden');
        pauseBtn.title = 'Tiếp tục';
      } else {
        pauseIcon?.classList.remove('hidden');
        resumeIcon?.classList.add('hidden');
        pauseBtn.title = 'Tạm dừng';
      }
    }
    
    // Event listeners
    pauseBtn.addEventListener('click', togglePause);
    resetBtn.addEventListener('click', reset);
    
    // Save time when page unloads
    window.addEventListener('beforeunload', saveTime);
    
    // Initialize
    loadSavedTime();
    updateDisplay();
    updatePauseButton();
    
    if (!isPaused) {
      start();
    }
    
    // Cleanup
    window.addEventListener('unload', () => {
      if (intervalId) {
        clearInterval(intervalId);
      }
    });
  })();
</script>
