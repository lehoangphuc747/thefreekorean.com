---
export interface Props {
  title?: string;
  documents: Array<{
    title: string;
    slug?: string;
    url?: string;
    type?: string;
    size?: string;
    cards?: number;
    date?: string;
    category?: string;
    subcategory?: string;
  }>;
  class?: string;
}

const {
  title = 'Tài liệu liên quan',
  documents = [],
  class: className = ''
} = Astro.props as Props;
---

{documents.length > 0 && (
  <section class={`related-documents ${className}`} aria-label="Related documents">
    <h2 class="section-title">{title}</h2>
    <div class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-3 gap-4">
      {documents.map((doc) => {
        const href = doc.url || (doc.slug ? `/tai-lieu/${doc.slug}` : '#');
        return (
          <a href={href} class="doc-card group" rel="noopener noreferrer">
            <div class="doc-card__header">
              <span class="doc-badge">{doc.type ? doc.type.toUpperCase() : 'FILE'}</span>
              {doc.size && <span class="doc-meta">{doc.size}</span>}
            </div>
            <h3 class="doc-title group-hover:text-blue-600">{doc.title}</h3>
            <div class="doc-footer">
              {typeof doc.cards === 'number' && (
                <span class="doc-chip">{doc.cards.toLocaleString()} thẻ</span>
              )}
              {doc.date && <span class="doc-chip">{doc.date}</span>}
              {doc.category && <span class="doc-chip">{doc.category}</span>}
            </div>
          </a>
        );
      })}
    </div>
  </section>
)}

<style>
  .related-documents {
    margin-top: 1.5rem;
  }

  .section-title {
    font-size: 1.125rem;
    font-weight: 700;
    color: #0f172a;
    margin: 0 0 0.75rem 0;
    text-align: center;
  }

  .doc-card {
    display: flex;
    flex-direction: column;
    gap: 0.5rem;
    padding: 0.875rem 1rem;
    border: 1px solid #e2e8f0;
    border-radius: 10px;
    background: #fff;
    text-decoration: none;
    transition: border-color 0.15s ease, box-shadow 0.15s ease, transform 0.15s ease;
  }

  .doc-card:hover {
    border-color: #93c5fd;
    box-shadow: 0 8px 20px rgba(59, 130, 246, 0.12);
    transform: translateY(-2px);
  }

  .doc-card__header {
    display: flex;
    align-items: center;
    justify-content: space-between;
    gap: 0.5rem;
  }

  .doc-badge {
    display: inline-flex;
    align-items: center;
    padding: 0.125rem 0.5rem;
    border-radius: 999px;
    background: #eff6ff;
    color: #1d4ed8;
    font-size: 0.7rem;
    font-weight: 700;
    letter-spacing: 0.02em;
  }

  .doc-meta {
    color: #64748b;
    font-size: 0.75rem;
    font-weight: 500;
  }

  .doc-title {
    margin: 0;
    color: #0f172a;
    font-size: 0.95rem;
    font-weight: 700;
    line-height: 1.35;
    min-height: 2.2em;
  }

  .doc-footer {
    display: flex;
    flex-wrap: wrap;
    gap: 0.375rem;
  }

  .doc-chip {
    display: inline-flex;
    align-items: center;
    padding: 0.125rem 0.5rem;
    border-radius: 6px;
    background: #f1f5f9;
    color: #475569;
    font-size: 0.7rem;
    font-weight: 600;
  }
</style>
