---
export interface Props {
  title: string;
  description: string;
  cover: string;
  type: string;
  category: string;
  subcategory: string;
  pages: number;
  fileSize: string;
  class?: string;
}

const { 
  title, 
  description, 
  cover, 
  type, 
  category, 
  subcategory, 
  pages, 
  fileSize,
  class: className = '' 
} = Astro.props;
---

<div class={`textbooks-header ${className}`}>
  <!-- Header với hình ảnh -->
  <div class="bg-white rounded-lg shadow-lg overflow-hidden mb-8">
    <div class="grid md:grid-cols-3 gap-6 p-6">
      <!-- Hình ảnh bìa sách -->
      <div class="md:col-span-1 flex justify-center">
        <section class="cover-section">
          <div class="cover-toolbar flex items-center justify-between mb-3">
            <a href="/tai-lieu" class="inline-flex items-center gap-2 px-3 py-1.5 bg-white text-gray-700 border border-gray-200 rounded-full shadow-sm hover:bg-gray-50 hover:border-gray-300 transition-colors text-sm font-medium">
              <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 19l-7-7 7-7"/>
              </svg>
              Quay lại
            </a>
            <span class="inline-flex items-center px-3 py-1 rounded-full text-sm font-bold shadow bg-blue-600 text-white">{type}</span>
          </div>
          <img 
            src={cover} 
            alt={title}
            class="book-cover w-full max-w-xs h-auto rounded-lg shadow-xl border border-gray-200"
            loading="lazy"
          />
        </section>
      </div>
      
      <!-- Thông tin chi tiết -->
      <div class="md:col-span-2">
        <h1 class="text-3xl md:text-4xl font-bold text-gray-900 mb-4">{title}</h1>
        <p class="text-lg text-gray-600 mb-6">{description}</p>
        
        <!-- Thông số kỹ thuật -->
        <div class="bg-white border border-gray-200 rounded-lg p-4 mb-6">
          <h3 class="text-sm font-semibold text-gray-900 mb-3">Thông tin chi tiết</h3>
          <div class="grid grid-cols-2 gap-x-4 gap-y-2 text-sm">
            <div class="flex items-center justify-between gap-3">
              <span class="text-gray-600">Danh mục</span>
              <span class="detail-chip">{category}</span>
            </div>
            <div class="flex items-center justify-between gap-3">
              <span class="text-gray-600">Phân loại</span>
              <span class="detail-chip">{subcategory}</span>
            </div>
            <div class="flex items-center justify-between gap-3">
              <span class="text-gray-600">Số trang</span>
              <span class="detail-chip">{pages} trang</span>
            </div>
            <div class="flex items-center justify-between gap-3">
              <span class="text-gray-600">Kích thước</span>
              <span class="detail-chip">{fileSize}</span>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>

<style>
  /* Responsive image styling */
  .book-cover {
    transition: transform 0.3s ease, box-shadow 0.3s ease;
  }
  
  .book-cover:hover {
    transform: translateY(-5px) scale(1.02);
    box-shadow: 0 20px 40px rgba(0, 0, 0, 0.15);
  }

  /* Mobile responsiveness */
  @media (max-width: 768px) {
    .book-cover {
      max-width: 250px;
      margin: 0 auto;
    }
    
    .textbooks-header h1 {
      font-size: 1.5rem;
    }
    
    .textbooks-header .grid {
      grid-template-columns: 1fr;
      gap: 1rem;
    }
    
    .textbooks-header .md\:col-span-1,
    .textbooks-header .md\:col-span-2 {
      grid-column: span 1;
    }
  }
  
  /* Smooth animations */
  .textbooks-header {
    animation: fadeInUp 0.6s ease-out;
  }
  
  @keyframes fadeInUp {
    from {
      opacity: 0;
      transform: translateY(20px);
    }
    to {
      opacity: 1;
      transform: translateY(0);
    }
  }

  .detail-chip {
    display: inline-flex;
    align-items: center;
    padding: 0; /* bỏ padding để không tạo cảm giác bọc */
    border-radius: 0;
    background: transparent; /* bỏ nền */
    color: #0f172a;
    font-weight: 600;
    font-size: 0.9rem;
    line-height: 1.2;
    border: none; /* bỏ viền */
  }

  .cover-section { display: inline-block; width: 100%; max-width: 20rem; }
  .cover-toolbar .shadow { box-shadow: 0 6px 16px rgba(59,130,246,0.25); }
</style>
