---
export interface Props {
  title: string;
  description: string;
  cover: string;
  type: string;
  category: string;
  subcategory: string;
  pages: number;
  fileSize: string;
  class?: string;
}

const { 
  title, 
  description, 
  cover, 
  type, 
  category, 
  subcategory, 
  pages, 
  fileSize,
  class: className = '' 
} = Astro.props;
---

<div class={`textbooks-header ${className}`}>
  <!-- Header với hình ảnh -->
  <div class="bg-white rounded-lg shadow-lg overflow-hidden mb-8">
    <div class="grid md:grid-cols-3 gap-6 p-6">
      <!-- Hình ảnh bìa sách -->
      <div class="md:col-span-1 flex justify-center">
        <div class="relative">
          <img 
            src={cover} 
            alt={title}
            class="book-cover w-full max-w-xs h-auto rounded-lg shadow-xl border border-gray-200"
            loading="lazy"
          />
          <!-- Badge cho loại tài liệu -->
          <div class="absolute top-2 right-2">
            <span class="bg-blue-600 text-white px-3 py-1 rounded-full text-sm font-bold shadow-lg">
              {type}
            </span>
          </div>
        </div>
      </div>
      
      <!-- Thông tin chi tiết -->
      <div class="md:col-span-2">
        <h1 class="text-3xl md:text-4xl font-bold text-gray-900 mb-4">{title}</h1>
        <p class="text-lg text-gray-600 mb-6">{description}</p>
        
        <!-- Thông số kỹ thuật -->
        <div class="bg-gray-50 rounded-lg p-4 mb-6">
          <h3 class="text-lg font-semibold text-gray-900 mb-3">Thông tin chi tiết</h3>
          <div class="grid grid-cols-2 gap-3 text-sm">
            <div class="flex justify-between">
              <span class="font-medium text-gray-700">Danh mục:</span>
              <span class="text-gray-900">{category}</span>
            </div>
            <div class="flex justify-between">
              <span class="font-medium text-gray-700">Phân loại:</span>
              <span class="text-gray-900">{subcategory}</span>
            </div>
            <div class="flex justify-between">
              <span class="font-medium text-gray-700">Số trang:</span>
              <span class="text-gray-900">{pages} trang</span>
            </div>
            <div class="flex justify-between">
              <span class="font-medium text-gray-700">Kích thước:</span>
              <span class="text-gray-900">{fileSize}</span>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>

<style>
  /* Responsive image styling */
  .book-cover {
    transition: transform 0.3s ease, box-shadow 0.3s ease;
  }
  
  .book-cover:hover {
    transform: translateY(-5px) scale(1.02);
    box-shadow: 0 20px 40px rgba(0, 0, 0, 0.15);
  }

  /* Mobile responsiveness */
  @media (max-width: 768px) {
    .book-cover {
      max-width: 250px;
      margin: 0 auto;
    }
    
    .textbooks-header h1 {
      font-size: 1.5rem;
    }
    
    .textbooks-header .grid {
      grid-template-columns: 1fr;
      gap: 1rem;
    }
    
    .textbooks-header .md\:col-span-1,
    .textbooks-header .md\:col-span-2 {
      grid-column: span 1;
    }
  }
  
  /* Smooth animations */
  .textbooks-header {
    animation: fadeInUp 0.6s ease-out;
  }
  
  @keyframes fadeInUp {
    from {
      opacity: 0;
      transform: translateY(20px);
    }
    to {
      opacity: 1;
      transform: translateY(0);
    }
  }
</style>
