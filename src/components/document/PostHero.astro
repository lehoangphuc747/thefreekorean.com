---
// Props: cover (string), title (string), onDownloadClick (function)
const { cover, title, onDownloadClick } = Astro.props;
---
<div class="w-full flex flex-col items-center mb-8">
  {cover && (
    <img src={cover} alt={title} class="w-full max-w-xs rounded-lg shadow mb-4" />
  )}
  <button
    class="px-6 py-2 bg-blue-600 text-white rounded-lg font-semibold shadow hover:bg-blue-700 transition flex items-center gap-2"
    onClick={onDownloadClick}
    type="button"
  >
    <span>⬇️</span> Tải tài liệu
  </button>
</div>
