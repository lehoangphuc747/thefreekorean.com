---
export interface Props {
  title?: string;
  examples: Array<{
    korean: string;
    vietnamese?: string;
    note?: string;
  }>;
  type?: 'dialogue' | 'sentence' | 'form';
  class?: string;
}

const { 
  title = "ÏòàÎ¨∏ (V√≠ d·ª•)",
  examples, 
  type = 'sentence',
  class: className = '' 
} = Astro.props;

const typeIcons: Record<string, string> = {
  dialogue: 'üó£Ô∏è',
  sentence: 'üìù',
  form: 'üß¨'
};

const typeColors: Record<string, string> = {
  dialogue: 'border-blue-500 bg-blue-50',
  sentence: 'border-green-500 bg-green-50',
  form: 'border-purple-500 bg-purple-50'
};
---

<div class={`grammar-examples ${className}`} data-type={type}>
  <h3 class="examples-title">
    {typeIcons[type]} {title}
  </h3>
  
  <div class="examples-container">
    {examples.map((example, index) => (
      <div class={`example-item ${typeColors[type]}`}>
        <div class="example-number">{index + 1}</div>
        <div class="example-content">
          <div class="korean-text" set:html={example.korean}></div>
          {example.vietnamese && (
            <div class="vietnamese-text">{example.vietnamese}</div>
          )}
          {example.note && (
            <div class="example-note">{example.note}</div>
          )}
        </div>
      </div>
    ))}
  </div>
</div>

<style>
  .grammar-examples {
    margin: 2rem 0;
  }

  .examples-title {
    color: #1e293b;
    font-size: 1.375rem;
    font-weight: 600;
    margin: 0 0 1.5rem 0;
    padding: 0.75rem 1rem;
    background: linear-gradient(135deg, #f1f5f9 0%, #e2e8f0 100%);
    border-left: 4px solid #3b82f6;
    border-radius: 0.5rem;
    display: flex;
    align-items: center;
    gap: 0.5rem;
  }

  .examples-container {
    display: flex;
    flex-direction: column;
    gap: 1rem;
  }

  .example-item {
    display: flex;
    align-items: flex-start;
    gap: 1rem;
    padding: 1.5rem;
    border: 1px solid;
    border-radius: 0.75rem;
    transition: all 0.2s ease;
  }

  .example-item:hover {
    transform: translateY(-2px);
    box-shadow: 0 8px 16px -4px rgba(0, 0, 0, 0.1);
  }

  .example-number {
    flex-shrink: 0;
    width: 2rem;
    height: 2rem;
    background: linear-gradient(135deg, #3b82f6 0%, #1d4ed8 100%);
    color: white;
    border-radius: 50%;
    display: flex;
    align-items: center;
    justify-content: center;
    font-weight: 600;
    font-size: 0.875rem;
    margin-top: 0.125rem;
  }

  .example-content {
    flex: 1;
  }

  .korean-text {
    font-family: 'Noto Sans KR', 'Malgun Gothic', 'ÎßëÏùÄ Í≥†Îîï', sans-serif;
    font-size: 1.125rem;
    line-height: 1.6;
    color: #1e293b;
    margin-bottom: 0.5rem;
  }

  .korean-text :global(strong) {
    background: linear-gradient(120deg, #3b82f6 0%, #1d4ed8 100%);
    background-clip: text;
    -webkit-background-clip: text;
    -webkit-text-fill-color: transparent;
    font-weight: 700;
  }

  .vietnamese-text {
    font-size: 0.95rem;
    color: #64748b;
    font-style: italic;
    margin-bottom: 0.5rem;
  }

  .example-note {
    font-size: 0.875rem;
    color: #059669;
    background: #ecfdf5;
    padding: 0.5rem 0.75rem;
    border-radius: 0.375rem;
    border-left: 3px solid #10b981;
    margin-top: 0.75rem;
  }

  /* Responsive design */
  @media (max-width: 768px) {
    .example-item {
      padding: 1rem;
      gap: 0.75rem;
    }

    .korean-text {
      font-size: 1rem;
    }

    .example-number {
      width: 1.75rem;
      height: 1.75rem;
      font-size: 0.75rem;
    }
  }
</style>
