---
export interface Detail {
  label: string;
  value: string;
  color: string;
}

export interface Props {
  details: Detail[];
}

const { details } = Astro.props;
---

<div class="bg-white rounded-3xl shadow-lg p-6 md:p-8 max-w-sm md:max-w-3xl w-full">
  <div class="flex flex-col md:flex-row justify-around items-center gap-4">
    {details.map((item) => (
      <div class="text-center flex-1 p-4 rounded-xl transition-colors hover:bg-slate-50">
        <p class={`text-2xl font-bold ${item.color}`}>{item.value}</p>
        <p class="text-sm text-slate-500 font-semibold uppercase tracking-wider mt-1">{item.label}</p>
      </div>
    ))}
  </div>
</div>
