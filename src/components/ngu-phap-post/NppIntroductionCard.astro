---
export interface DialogueLine {
  speaker: string;
  text_ko: string;
  text_vi: string;
}

export interface Dialogue {
  id: number;
  lines: DialogueLine[];
}

export interface Note {
  note_ko: string;
  note_vi: string;
}

export interface Props {
  title?: string;
  dialogues: Dialogue[];
  notes: Note[];
}

