---
export interface Detail {
  label: string;
  value: string;
  color: string;
}

export interface Props {
  details: Detail[];
}

const { details } = Astro.props;
---

<section class="bg-white/90 backdrop-blur rounded-2xl border border-slate-200 shadow-sm p-5 md:p-6">
  <div class="grid grid-cols-1 sm:grid-cols-3 gap-4 md:gap-6">
    {details.map((item) => (
      <div class="text-center p-4 rounded-xl bg-white/70 border border-slate-100 shadow-sm">
        <p class={`text-xl md:text-2xl font-semibold ${item.color}`}>{item.value}</p>
        <p class="text-2xs md:text-xs text-slate-500 font-semibold tracking-[0.3em] mt-2 uppercase">{item.label}</p>
      </div>
    ))}
  </div>
</section>
