---
// Component: NavBar nâng cấp UI
import '../styles/navbar.css';
---

<nav class="navbar">
  <div class="navbar-container">
    <button
      class="navbar-toggle"
      id="navbar-toggle"
      type="button"
      aria-label="Mở menu"
      aria-controls="navbar-menu"
      aria-expanded="false"
    >
      <svg class="w-7 h-7" fill="none" stroke="currentColor" viewBox="0 0 24 24">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 6h16M4 12h16M4 18h16" />
      </svg>
    </button>
    <a href="/" class="navbar-logo">
      <span class="logo-text">The Free Korean</span>
    </a>
    <div class="navbar-spacer"></div>
    <ul class="navbar-menu" id="navbar-menu">
      <li><a href="/gioi-thieu" class="nav-link">Giới thiệu</a></li>
      <li><a href="/tai-lieu" class="nav-link">Tài liệu</a></li>
      <li><a href="/grammar" class="nav-link">Ngữ pháp</a></li>
      <li><a href="/topik" class="nav-link">TOPIK</a></li>
    </ul>
    <div class="navbar-overlay" id="navbar-overlay" hidden></div>
  </div>
</nav>

<style>
.navbar {
  position: fixed; /* dùng fixed để luôn ở trên cùng */
  top: 0;
  z-index: 3000; /* cao để trên mọi lớp */
  width: 100%;
  background: #ffffff;
  box-shadow: 0 4px 24px 0 rgba(50,69,255,0.12);
  border-bottom: 1px solid rgba(226,232,240,0.8);
  transition: background 0.3s, box-shadow 0.3s;
  height: 70px;
}
.navbar-container {
  max-width: 1100px;
  margin: 0 auto;
  display: flex;
  align-items: center;
  justify-content: space-between;
  padding: 0.5rem 1.5rem;
  position: relative;
  z-index: 3100; /* cao hơn các phần tử con khác */
  flex-wrap: nowrap; /* tránh menu xuống dòng */
}
.navbar-logo {
  display: flex;
  align-items: center;
  gap: 0.5rem;
  font-weight: 800;
  font-size: 1.35rem;
  color: #3245ff;
  text-decoration: none;
  letter-spacing: 1px;
  transition: color 0.2s;
  white-space: nowrap; /* giữ logo trên một dòng */
}
.logo-icon {
  font-size: 1.6rem;
  filter: drop-shadow(0 2px 6px #3245ff33);
}
.logo-text {
  background: linear-gradient(90deg, #3245ff, #bc52ee);
  -webkit-background-clip: text;
  -webkit-text-fill-color: transparent;
  background-clip: text;
}
.navbar-toggle {
  display: none;
  background: none;
  border: none;
  cursor: pointer;
  color: #3245ff;
  position: relative;
  z-index: 3200; /* ensure clickable */
  width: 44px; /* tăng vùng click tối thiểu */
  height: 44px;
  padding: 8px; /* tăng vùng tap */
  -webkit-tap-highlight-color: transparent;
  pointer-events: auto; /* bảo đảm nhận click */
  flex-shrink: 0;
}
.navbar-spacer {
  display: none;
  width: 44px;
  flex-shrink: 0;
}
.navbar-menu {
  display: flex;
  gap: 2rem;
  align-items: center;
  list-style: none;
  margin: 0;
  padding: 0;
}
.nav-link {
  position: relative;
  font-weight: 600;
  font-size: 1.08rem;
  color: #1f2a8b;
  text-decoration: none;
  padding: 0.55rem 0.85rem;
  border-radius: 999px;
  transition: background 0.25s ease, color 0.25s ease, box-shadow 0.25s ease;
}
.nav-link::after {
  content: '';
  position: absolute;
  left: 50%;
  bottom: 0.25rem;
  width: 0;
  height: 3px;
  background: linear-gradient(90deg, #3245ff, #bc52ee);
  border-radius: 999px;
  transform: translateX(-50%);
  transition: width 0.25s ease;
}
.nav-link:hover,
.nav-link:focus {
  background: rgba(50, 69, 255, 0.08);
  color: #2430c5;
  box-shadow: 0 8px 20px rgba(50, 69, 255, 0.12);
}
.nav-link:hover::after,
.nav-link:focus::after {
  width: 60%;
}
.nav-link.active, .nav-link[aria-current="page"] {
  background: linear-gradient(90deg, #3245ff, #bc52ee);
  color: #fff;
  box-shadow: 0 4px 16px #3245ff33;
}
.navbar-overlay {
  display: none;
}
@media (max-width: 900px) {
  .navbar-container {
    padding: 0.5rem 1rem;
    position: relative;
    justify-content: space-between;
  }
  /* Hiển thị toggle sớm hơn cho tablet dọc */
  .navbar-toggle {
    display: flex;
    align-items: center;
    justify-content: center;
  }
  /* Logo căn giữa trên mobile */
  .navbar-logo {
    position: absolute;
    left: 50%;
    transform: translateX(-50%);
    z-index: 3101;
  }
  /* Spacer để cân bằng với toggle button */
  .navbar-spacer {
    display: block;
  }
  /* Menu trượt từ bên trái trên mobile */
  .navbar-menu {
    position: fixed;
    top: 70px;
    bottom: 0;
    left: 0;
    width: min(320px, 80vw);
    background: #ffffff;
    box-shadow: 12px 0 32px rgba(17, 24, 39, 0.18);
    flex-direction: column;
    gap: 0;
    padding: 1.5rem 1rem 2rem;
    border-radius: 0;
    z-index: 3300; /* menu nổi cao hơn */
    overflow-y: auto;
    transform: translateX(-100%);
    transition: transform 0.3s ease, opacity 0.3s ease;
    opacity: 0;
    pointer-events: none;
    will-change: transform, opacity;
  }
  .navbar-menu.open {
    transform: translateX(0);
    opacity: 1;
    pointer-events: auto;
  }
  .nav-link {
    width: 100%;
    text-align: left;
    padding: 0.85rem 0.75rem;
    border-radius: 12px;
  }
  .nav-link:hover,
  .nav-link:focus {
    background: transparent;
    color: #1f2a8b;
    box-shadow: none;
    transform: none;
  }
  .nav-link:active {
    background: linear-gradient(90deg, rgba(50,69,255,0.18), rgba(188,82,238,0.18));
    color: #10175c;
    transform: translateX(4px);
  }
  .navbar-menu li {
    width: 100%;
  }
  .nav-link::after {
    display: none;
    font-size: 1.1rem;
    border-radius: 0;
  }
  .navbar-overlay {
    display: block;
    position: fixed;
    top: 70px;
    left: 0;
    right: 0;
    height: calc(100vh - 70px);
    background: rgba(17, 24, 39, 0.35);
    opacity: 0;
    pointer-events: none;
    transition: opacity 0.25s ease;
    z-index: 3250;
  }
  .navbar-overlay.open {
    opacity: 1;
    pointer-events: auto;
  }
  :global(body.menu-open) {
    overflow: hidden;
  }
}
</style>

<script is:inline>
  document.addEventListener('DOMContentLoaded', function() {
    const toggle = document.getElementById('navbar-toggle');
    const menu = document.getElementById('navbar-menu');
    const overlay = document.getElementById('navbar-overlay');
    
    if (!toggle || !menu) return;

    const mobileQuery = window.matchMedia('(max-width: 900px)');

    function isMobile() {
      return mobileQuery.matches;
    }

    function resetMenu() {
      menu.classList.remove('open');
      toggle.classList.remove('open');
      document.body.classList.remove('menu-open');
      toggle.setAttribute('aria-expanded', 'false');
      if (overlay) {
        overlay.classList.remove('open');
        overlay.setAttribute('hidden', '');
      }
    }

    function setOpen(isOpen) {
      if (!isMobile()) {
        resetMenu();
        return;
      }
      menu.classList.toggle('open', isOpen);
      toggle.classList.toggle('open', isOpen);
      document.body.classList.toggle('menu-open', isOpen);
      toggle.setAttribute('aria-expanded', isOpen ? 'true' : 'false');
      if (overlay) {
        if (isOpen) {
          overlay.classList.add('open');
          overlay.removeAttribute('hidden');
        } else {
          overlay.classList.remove('open');
          overlay.setAttribute('hidden', '');
        }
      }
    }

    toggle.addEventListener('click', function(e) {
      e.preventDefault();
      e.stopPropagation();
      if (!isMobile()) return;
      const isOpen = menu.classList.contains('open');
      setOpen(!isOpen);
    });

    if (overlay) {
      overlay.addEventListener('click', function() {
        setOpen(false);
      });
    }

    const menuLinks = menu.querySelectorAll('a');
    menuLinks.forEach(function(link) {
      link.addEventListener('click', function() {
        setOpen(false);
      });
    });

    function syncMenu() {
      if (isMobile()) {
        setOpen(false);
      } else {
        resetMenu();
      }
    }

    mobileQuery.addEventListener('change', syncMenu);
    syncMenu();

    document.addEventListener('click', function(e) {
      if (!isMobile()) return;
      const clickedToggle = e.target.closest('#navbar-toggle');
      if (clickedToggle) return;
      if (menu.classList.contains('open') && !menu.contains(e.target)) {
        setOpen(false);
      }
    });

    document.addEventListener('keydown', function(e) {
      if (e.key === 'Escape') {
        setOpen(false);
      }
    });

    // Highlight active link
    const allLinks = document.querySelectorAll('.nav-link');
    const currentPath = window.location.pathname;
    allLinks.forEach(function(link) {
      const href = link.getAttribute('href');
      if (href === currentPath) {
        link.classList.add('active');
        link.setAttribute('aria-current', 'page');
      }
    });
  });
</script>