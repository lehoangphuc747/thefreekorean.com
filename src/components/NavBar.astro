---
// Component: NavBar nâng cấp UI
import '../styles/navbar.css';
---

<nav class="navbar">
  <div class="navbar-container">
    <a href="/" class="navbar-logo">
      <span class="logo-icon">🌈</span>
      <span class="logo-text">The Free Korean</span>
    </a>
    <button class="navbar-toggle" id="navbar-toggle" aria-label="Mở menu">
      <svg class="w-7 h-7" fill="none" stroke="currentColor" viewBox="0 0 24 24">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 6h16M4 12h16M4 18h16" />
      </svg>
    </button>
    <ul class="navbar-menu" id="navbar-menu">
      <li><a href="/gioi-thieu" class="nav-link">Giới thiệu</a></li>
      <li><a href="/tai-lieu" class="nav-link">Tài liệu</a></li>
      <li><a href="/ngu-phap" class="nav-link">Ngữ pháp</a></li>
      <li><a href="/topik" class="nav-link">TOPIK</a></li>
    </ul>
  </div>
</nav>

<style>
.navbar {
  position: sticky;
  top: 0;
  z-index: 50;
  width: 100%;
  background: rgba(255,255,255,0.7);
  backdrop-filter: blur(12px);
  box-shadow: 0 2px 16px 0 rgba(50,69,255,0.07);
  border-bottom: 1px solid #e2e8f0;
  transition: background 0.3s, box-shadow 0.3s;
}
.navbar-container {
  max-width: 1100px;
  margin: 0 auto;
  display: flex;
  align-items: center;
  justify-content: space-between;
  padding: 0.5rem 1.5rem;
}
.navbar-logo {
  display: flex;
  align-items: center;
  gap: 0.5rem;
  font-weight: 800;
  font-size: 1.35rem;
  color: #3245ff;
  text-decoration: none;
  letter-spacing: 1px;
  transition: color 0.2s;
}
.logo-icon {
  font-size: 1.6rem;
  filter: drop-shadow(0 2px 6px #3245ff33);
}
.logo-text {
  background: linear-gradient(90deg, #3245ff, #bc52ee);
  -webkit-background-clip: text;
  -webkit-text-fill-color: transparent;
  background-clip: text;
}
.navbar-toggle {
  display: none;
  background: none;
  border: none;
  cursor: pointer;
  color: #3245ff;
  margin-left: 1rem;
}
.navbar-menu {
  display: flex;
  gap: 2rem;
  align-items: center;
  list-style: none;
  margin: 0;
  padding: 0;
}
.nav-link {
  position: relative;
  font-weight: 600;
  font-size: 1.08rem;
  color: #3245ff;
  text-decoration: none;
  padding: 0.5rem 0.7rem;
  border-radius: 8px;
  transition: background 0.2s, color 0.2s, box-shadow 0.2s;
}
.nav-link:hover, .nav-link:focus {
  background: linear-gradient(90deg, #3245ff22, #bc52ee22);
  color: #bc52ee;
  box-shadow: 0 2px 8px #bc52ee22;
}
.nav-link.active, .nav-link[aria-current="page"] {
  background: linear-gradient(90deg, #3245ff, #bc52ee);
  color: #fff;
  box-shadow: 0 4px 16px #3245ff33;
}
@media (max-width: 900px) {
  .navbar-container {
    padding: 0.5rem 1rem;
  }
  .navbar-menu {
    gap: 1.2rem;
  }
}
@media (max-width: 700px) {
  .navbar-toggle {
    display: block;
  }
  .navbar-menu {
    position: absolute;
    top: 100%;
    right: 0;
    left: 0;
    background: rgba(255,255,255,0.98);
    box-shadow: 0 8px 32px #3245ff11;
    flex-direction: column;
    gap: 0;
    padding: 1rem 0;
    border-radius: 0 0 18px 18px;
    display: none;
    z-index: 100;
  }
  .navbar-menu.open {
    display: flex;
  }
  .nav-link {
    width: 100%;
    text-align: center;
    padding: 1rem 0;
    font-size: 1.1rem;
    border-radius: 0;
  }
}
</style>

<script>
document.addEventListener('DOMContentLoaded', function() {
  const toggle = document.getElementById('navbar-toggle');
  const menu = document.getElementById('navbar-menu');
  // Toggle menu on mobile
  if (toggle && menu) {
    toggle.addEventListener('click', function() {
      menu.classList.toggle('open');
    });
  }
  // Đóng menu khi click ngoài
  document.addEventListener('click', function(e) {
    if (menu && menu.classList.contains('open') && !menu.contains(e.target) && e.target !== toggle) {
      menu.classList.remove('open');
    }
  });
  // Highlight active link
  const links = document.querySelectorAll('.nav-link');
  const path = window.location.pathname;
  links.forEach(link => {
    if (link.getAttribute('href') === path) {
      link.classList.add('active');
      link.setAttribute('aria-current', 'page');
    }
    });
  });
</script>