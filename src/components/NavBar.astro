---
// Component: NavBar nâng cấp UI
import '../styles/navbar.css';
---

<nav class="navbar">
  <div class="navbar-container">
    <a href="/" class="navbar-logo">
      <span class="logo-text">The Free Korean</span>
    </a>
    <button class="navbar-toggle" id="navbar-toggle" aria-label="Mở menu">
      <svg class="w-7 h-7" fill="none" stroke="currentColor" viewBox="0 0 24 24">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 6h16M4 12h16M4 18h16" />
      </svg>
    </button>
    <ul class="navbar-menu" id="navbar-menu">
      <li><a href="/gioi-thieu" class="nav-link">Giới thiệu</a></li>
      <li><a href="/tai-lieu" class="nav-link">Tài liệu</a></li>
      <li><a href="/grammar" class="nav-link">Ngữ pháp</a></li>
      <li><a href="/topik" class="nav-link">TOPIK</a></li>
    </ul>
  </div>
</nav>

<style>
.navbar {
  position: fixed; /* dùng fixed để luôn ở trên cùng */
  top: 0;
  z-index: 3000; /* cao để trên mọi lớp */
  width: 100%;
  background: #ffffff;
  box-shadow: 0 4px 24px 0 rgba(50,69,255,0.12);
  border-bottom: 1px solid rgba(226,232,240,0.8);
  transition: background 0.3s, box-shadow 0.3s;
  height: 70px;
}
.navbar-container {
  max-width: 1100px;
  margin: 0 auto;
  display: flex;
  align-items: center;
  justify-content: space-between;
  padding: 0.5rem 1.5rem;
  position: relative;
  z-index: 3100; /* cao hơn các phần tử con khác */
  flex-wrap: nowrap; /* tránh menu xuống dòng */
}
.navbar-logo {
  display: flex;
  align-items: center;
  gap: 0.5rem;
  font-weight: 800;
  font-size: 1.35rem;
  color: #3245ff;
  text-decoration: none;
  letter-spacing: 1px;
  transition: color 0.2s;
  white-space: nowrap; /* giữ logo trên một dòng */
}
.logo-icon {
  font-size: 1.6rem;
  filter: drop-shadow(0 2px 6px #3245ff33);
}
.logo-text {
  background: linear-gradient(90deg, #3245ff, #bc52ee);
  -webkit-background-clip: text;
  -webkit-text-fill-color: transparent;
  background-clip: text;
}
.navbar-toggle {
  display: none;
  background: none;
  border: none;
  cursor: pointer;
  color: #3245ff;
  margin-left: 1rem;
  position: relative;
  z-index: 3200; /* ensure clickable */
  width: 44px; /* tăng vùng click tối thiểu */
  height: 44px;
  padding: 8px; /* tăng vùng tap */
  -webkit-tap-highlight-color: transparent;
  pointer-events: auto; /* bảo đảm nhận click */
}
.navbar-menu {
  display: flex;
  gap: 2rem;
  align-items: center;
  list-style: none;
  margin: 0;
  padding: 0;
}
.nav-link {
  position: relative;
  font-weight: 600;
  font-size: 1.08rem;
  color: #3245ff;
  text-decoration: none;
  padding: 0.5rem 0.7rem;
  border-radius: 8px;
  transition: background 0.2s, color 0.2s, box-shadow 0.2s;
}
.nav-link:hover, .nav-link:focus {
  background: linear-gradient(90deg, #3245ff22, #bc52ee22);
  color: #bc52ee;
  box-shadow: 0 2px 8px #bc52ee22;
}
.nav-link.active, .nav-link[aria-current="page"] {
  background: linear-gradient(90deg, #3245ff, #bc52ee);
  color: #fff;
  box-shadow: 0 4px 16px #3245ff33;
}
@media (max-width: 900px) {
  .navbar-container {
    padding: 0.5rem 1rem;
  }
  /* Hiển thị toggle sớm hơn cho tablet dọc */
  .navbar-toggle {
    display: block;
  }
  /* Chuyển menu sang dạng dropdown dưới navbar */
  .navbar-menu {
    position: absolute;
    top: 100%;
    right: 0;
    left: 0;
    background: #ffffff;
    box-shadow: 0 8px 32px rgba(50,69,255,0.15);
    flex-direction: column;
    gap: 0;
    padding: 1rem 0;
    border-radius: 0 0 18px 18px;
    display: none;
    z-index: 3300; /* menu nổi cao hơn */
  }
  .navbar-menu.open {
    display: flex;
  }
  .nav-link {
    width: 100%;
    text-align: center;
    padding: 1rem 0;
    font-size: 1.1rem;
    border-radius: 0;
  }
}
</style>

<script>
document.addEventListener('DOMContentLoaded', function() {
  const toggle = document.getElementById('navbar-toggle');
  const menu = document.getElementById('navbar-menu');

  function setOpen(isOpen) {
    if (!menu || !toggle) return;
    menu.classList.toggle('open', isOpen);
    toggle.classList.toggle('open', isOpen);
    document.body.classList.toggle('menu-open', isOpen);
    toggle.setAttribute('aria-expanded', isOpen ? 'true' : 'false');
  }

  // Robust toggle: support clicks on child SVG and touchstart on mobile
  function handleToggle(e) {
    e.preventDefault();
    e.stopPropagation();
    const isOpen = menu?.classList.contains('open');
    setOpen(!isOpen);
  }

  if (toggle && menu) {
    toggle.addEventListener('click', handleToggle, { passive: false });
    toggle.addEventListener('touchstart', handleToggle, { passive: false });
  }

  // Close when clicking outside
  document.addEventListener('click', function(e) {
    if (!menu || !toggle) return;
    const clickedToggle = e.target && e.target.closest ? e.target.closest('#navbar-toggle') : null;
    if (clickedToggle) return; // handled above
    if (menu.classList.contains('open') && !menu.contains(e.target)) {
      setOpen(false);
    }
  });
  // Highlight active link
  const links = document.querySelectorAll('.nav-link');
  const path = window.location.pathname;
  links.forEach(link => {
    if (link.getAttribute('href') === path) {
      link.classList.add('active');
      link.setAttribute('aria-current', 'page');
    }
    });
  });
</script>