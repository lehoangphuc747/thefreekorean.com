---
// Component: NavBar nâng cấp UI
import '../styles/navbar.css';
---

<nav class="navbar">
  <div class="navbar-container">
    <button
      class="navbar-toggle"
      id="navbar-toggle"
      type="button"
      aria-label="Mở menu"
      aria-controls="navbar-menu"
      aria-expanded="false"
    >
      <svg class="w-7 h-7" fill="none" stroke="currentColor" viewBox="0 0 24 24">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 6h16M4 12h16M4 18h16" />
      </svg>
    </button>
    <a href="/" class="navbar-logo">
      <span class="logo-text">The Free Korean</span>
    </a>
    <div class="navbar-spacer"></div>
    <ul class="navbar-menu" id="navbar-menu">
      <li><a href="/gioi-thieu" class="nav-link">Giới thiệu</a></li>
      <li><a href="/tai-lieu" class="nav-link">Tài liệu</a></li>
      <li><a href="/grammar" class="nav-link">Ngữ pháp</a></li>
      <li><a href="/topik" class="nav-link">TOPIK</a></li>
    </ul>
    <div class="navbar-overlay" id="navbar-overlay" hidden></div>
  </div>
</nav>

<style>
.navbar {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  z-index: 3000;
  width: 100%;
  background: #ffffff;
  box-shadow: 0 4px 24px 0 rgba(50,69,255,0.12);
  border-bottom: 1px solid rgba(226,232,240,0.8);
  transition: background 0.3s ease, box-shadow 0.3s ease, transform 0.3s ease;
  height: 70px;
  /* Safe area cho notch devices */
  padding-top: env(safe-area-inset-top, 0);
}

/* Hide navbar khi scroll xuống, hiện khi scroll lên */
.navbar.nav-hidden {
  transform: translateY(-100%);
}
.navbar-container {
  max-width: 1100px;
  margin: 0 auto;
  display: flex;
  align-items: center;
  justify-content: space-between;
  padding: 0.5rem 1.5rem;
  position: relative;
  z-index: 3100; /* cao hơn các phần tử con khác */
  flex-wrap: nowrap; /* tránh menu xuống dòng */
}
.navbar-logo {
  display: flex;
  align-items: center;
  gap: 0.5rem;
  font-weight: 800;
  font-size: 1.35rem;
  color: #3245ff;
  text-decoration: none;
  letter-spacing: 1px;
  transition: color 0.2s;
  white-space: nowrap; /* giữ logo trên một dòng */
}
.logo-icon {
  font-size: 1.6rem;
  filter: drop-shadow(0 2px 6px #3245ff33);
}
.logo-text {
  background: linear-gradient(90deg, #3245ff, #bc52ee);
  -webkit-background-clip: text;
  -webkit-text-fill-color: transparent;
  background-clip: text;
}
.navbar-toggle {
  display: none;
  background: none;
  border: none;
  cursor: pointer;
  color: #3245ff;
  position: relative;
  z-index: 3200;
  width: 48px;
  height: 48px;
  min-width: 48px; /* Đảm bảo touch target tối thiểu 48px theo Google guidelines */
  min-height: 48px;
  padding: 10px;
  -webkit-tap-highlight-color: transparent;
  pointer-events: auto;
  flex-shrink: 0;
  border-radius: 12px;
  transition: background-color 0.2s ease, transform 0.2s ease;
}

.navbar-toggle:active {
  background-color: rgba(50, 69, 255, 0.1);
  transform: scale(0.95);
}

/* Hamburger icon animation */
.navbar-toggle svg {
  transition: transform 0.3s cubic-bezier(0.4, 0, 0.2, 1);
}

.navbar-toggle.open svg {
  transform: rotate(90deg);
}
.navbar-spacer {
  display: none;
  width: 44px;
  flex-shrink: 0;
}
.navbar-menu {
  display: flex;
  gap: 2rem;
  align-items: center;
  list-style: none;
  margin: 0;
  padding: 0;
}
.nav-link {
  position: relative;
  font-weight: 600;
  font-size: 1.08rem;
  color: #1f2a8b;
  text-decoration: none;
  padding: 0.55rem 0.85rem;
  border-radius: 999px;
  transition: background 0.25s ease, color 0.25s ease, box-shadow 0.25s ease;
}
.nav-link::after {
  content: '';
  position: absolute;
  left: 50%;
  bottom: 0.25rem;
  width: 0;
  height: 3px;
  background: linear-gradient(90deg, #3245ff, #bc52ee);
  border-radius: 999px;
  transform: translateX(-50%);
  transition: width 0.25s ease;
}
.nav-link:hover,
.nav-link:focus {
  background: rgba(50, 69, 255, 0.08);
  color: #2430c5;
  box-shadow: 0 8px 20px rgba(50, 69, 255, 0.12);
}
.nav-link:hover::after,
.nav-link:focus::after {
  width: 60%;
}
.nav-link.active, .nav-link[aria-current="page"] {
  background: linear-gradient(90deg, #3245ff, #bc52ee);
  color: #fff;
  box-shadow: 0 4px 16px #3245ff33;
}
.navbar-overlay {
  display: none;
}
@media (max-width: 900px) {
  .navbar {
    height: calc(60px + env(safe-area-inset-top, 0));
  }
  
  .navbar-container {
    padding: 0.5rem 0.75rem;
    position: relative;
    justify-content: space-between;
    height: 60px;
  }
  
  .navbar-toggle {
    display: flex;
    align-items: center;
    justify-content: center;
  }
  
  /* Logo căn giữa trên mobile */
  .navbar-logo {
    position: absolute;
    left: 50%;
    transform: translateX(-50%);
    z-index: 3101;
    font-size: 1.15rem;
  }
  
  .navbar-logo .logo-text {
    font-size: 1.15rem;
  }
  
  /* Spacer để cân bằng với toggle button */
  .navbar-spacer {
    display: block;
    width: 48px;
  }
  
  /* Menu trượt từ bên trái */
  .navbar-menu {
    position: fixed;
    top: calc(60px + env(safe-area-inset-top, 0));
    bottom: 0;
    left: 0;
    width: min(300px, 85vw);
    background: #ffffff;
    box-shadow: 8px 0 32px rgba(17, 24, 39, 0.15);
    flex-direction: column;
    gap: 0.5rem;
    padding: 1.25rem 1rem calc(1.5rem + env(safe-area-inset-bottom, 0));
    border-radius: 0;
    z-index: 3300;
    overflow-y: auto;
    overscroll-behavior: contain;
    transform: translateX(-100%);
    transition: transform 0.35s cubic-bezier(0.4, 0, 0.2, 1);
    opacity: 1;
    pointer-events: none;
    will-change: transform;
    -webkit-overflow-scrolling: touch;
  }
  
  .navbar-menu.open {
    transform: translateX(0);
    pointer-events: auto;
  }
  
  .navbar-menu li {
    width: 100%;
    opacity: 0;
    transform: translateX(-20px);
    transition: opacity 0.25s ease, transform 0.25s ease;
  }
  
  /* Stagger animation cho menu items */
  .navbar-menu.open li {
    opacity: 1;
    transform: translateX(0);
  }
  .navbar-menu.open li:nth-child(1) { transition-delay: 0.05s; }
  .navbar-menu.open li:nth-child(2) { transition-delay: 0.1s; }
  .navbar-menu.open li:nth-child(3) { transition-delay: 0.15s; }
  .navbar-menu.open li:nth-child(4) { transition-delay: 0.2s; }
  .navbar-menu.open li:nth-child(5) { transition-delay: 0.25s; }
  
  .nav-link {
    width: 100%;
    text-align: left;
    padding: 1rem 1rem;
    border-radius: 12px;
    font-size: 1.05rem;
    min-height: 48px;
    display: flex;
    align-items: center;
  }
  
  .nav-link:hover,
  .nav-link:focus {
    background: rgba(50, 69, 255, 0.06);
    color: #1f2a8b;
    box-shadow: none;
    transform: none;
  }
  
  .nav-link:active {
    background: linear-gradient(90deg, rgba(50,69,255,0.15), rgba(188,82,238,0.12));
    color: #10175c;
  }
  
  .nav-link.active,
  .nav-link[aria-current="page"] {
    background: linear-gradient(90deg, rgba(50,69,255,0.12), rgba(188,82,238,0.08));
    color: #3245ff;
    font-weight: 700;
    box-shadow: inset 3px 0 0 #3245ff;
  }
  
  .nav-link::after {
    display: none;
  }
  
  /* Overlay backdrop */
  .navbar-overlay {
    display: block;
    position: fixed;
    top: calc(60px + env(safe-area-inset-top, 0));
    left: 0;
    right: 0;
    bottom: 0;
    background: rgba(15, 23, 42, 0.4);
    backdrop-filter: blur(4px);
    -webkit-backdrop-filter: blur(4px);
    opacity: 0;
    pointer-events: none;
    transition: opacity 0.3s ease;
    z-index: 3250;
  }
  
  .navbar-overlay.open {
    opacity: 1;
    pointer-events: auto;
  }
  
  :global(body.menu-open) {
    overflow: hidden;
    touch-action: none;
  }
}

/* Extra small devices */
@media (max-width: 360px) {
  .navbar-logo .logo-text {
    font-size: 1rem;
  }
  
  .navbar-menu {
    width: 90vw;
  }
}
</style>

<script is:inline>
  document.addEventListener('DOMContentLoaded', function() {
    const navbar = document.querySelector('.navbar');
    const toggle = document.getElementById('navbar-toggle');
    const menu = document.getElementById('navbar-menu');
    const overlay = document.getElementById('navbar-overlay');
    
    if (!toggle || !menu || !navbar) return;

    const mobileQuery = window.matchMedia('(max-width: 900px)');
    
    // --- Scroll Hide/Show Navbar ---
    let lastScrollY = window.scrollY;
    let ticking = false;
    const SCROLL_THRESHOLD = 10;
    const NAVBAR_HIDE_OFFSET = 100; // Chỉ ẩn navbar sau khi scroll qua 100px

    function handleScroll() {
      const currentScrollY = window.scrollY;
      const isMenuOpen = menu.classList.contains('open');
      
      // Không ẩn navbar nếu menu đang mở
      if (isMenuOpen) {
        navbar.classList.remove('nav-hidden');
        return;
      }
      
      // Chỉ ẩn navbar nếu đã scroll qua một khoảng nhất định
      if (currentScrollY > NAVBAR_HIDE_OFFSET) {
        // Scroll xuống - ẩn navbar
        if (currentScrollY > lastScrollY + SCROLL_THRESHOLD) {
          navbar.classList.add('nav-hidden');
        }
        // Scroll lên - hiện navbar
        else if (currentScrollY < lastScrollY - SCROLL_THRESHOLD) {
          navbar.classList.remove('nav-hidden');
        }
      } else {
        // Gần top page - luôn hiện navbar
        navbar.classList.remove('nav-hidden');
      }
      
      lastScrollY = currentScrollY;
    }

    function onScroll() {
      if (!ticking) {
        window.requestAnimationFrame(function() {
          handleScroll();
          ticking = false;
        });
        ticking = true;
      }
    }

    // Chỉ enable scroll hide trên mobile
    if (isMobile()) {
      window.addEventListener('scroll', onScroll, { passive: true });
    }
    
    mobileQuery.addEventListener('change', function() {
      if (isMobile()) {
        window.addEventListener('scroll', onScroll, { passive: true });
      } else {
        window.removeEventListener('scroll', onScroll);
        navbar.classList.remove('nav-hidden');
      }
    });

    function isMobile() {
      return mobileQuery.matches;
    }

    function resetMenu() {
      menu.classList.remove('open');
      toggle.classList.remove('open');
      document.body.classList.remove('menu-open');
      toggle.setAttribute('aria-expanded', 'false');
      if (overlay) {
        overlay.classList.remove('open');
        overlay.setAttribute('hidden', '');
      }
    }

    function setOpen(isOpen) {
      if (!isMobile()) {
        resetMenu();
        return;
      }
      menu.classList.toggle('open', isOpen);
      toggle.classList.toggle('open', isOpen);
      document.body.classList.toggle('menu-open', isOpen);
      toggle.setAttribute('aria-expanded', isOpen ? 'true' : 'false');
      
      // Khi mở menu, đảm bảo navbar visible
      if (isOpen) {
        navbar.classList.remove('nav-hidden');
      }
      
      if (overlay) {
        if (isOpen) {
          overlay.classList.add('open');
          overlay.removeAttribute('hidden');
        } else {
          overlay.classList.remove('open');
          overlay.setAttribute('hidden', '');
        }
      }
    }

    toggle.addEventListener('click', function(e) {
      e.preventDefault();
      e.stopPropagation();
      if (!isMobile()) return;
      const isOpen = menu.classList.contains('open');
      setOpen(!isOpen);
    });

    if (overlay) {
      overlay.addEventListener('click', function() {
        setOpen(false);
      });
    }

    const menuLinks = menu.querySelectorAll('a');
    menuLinks.forEach(function(link) {
      link.addEventListener('click', function() {
        setOpen(false);
      });
    });

    function syncMenu() {
      if (isMobile()) {
        setOpen(false);
      } else {
        resetMenu();
      }
    }

    mobileQuery.addEventListener('change', syncMenu);
    syncMenu();

    document.addEventListener('click', function(e) {
      if (!isMobile()) return;
      const clickedToggle = e.target.closest('#navbar-toggle');
      if (clickedToggle) return;
      if (menu.classList.contains('open') && !menu.contains(e.target)) {
        setOpen(false);
      }
    });

    document.addEventListener('keydown', function(e) {
      if (e.key === 'Escape') {
        setOpen(false);
      }
    });

    // Highlight active link (support cả path chính xác và path con)
    const allLinks = document.querySelectorAll('.nav-link');
    const currentPath = window.location.pathname.replace(/\/$/, '') || '/';
    
    allLinks.forEach(function(link) {
      const href = (link.getAttribute('href') || '').replace(/\/$/, '') || '/';
      const isActive = href === currentPath || 
        (href !== '/' && currentPath.startsWith(href));
      
      if (isActive) {
        link.classList.add('active');
        link.setAttribute('aria-current', 'page');
      }
    });
  });
</script>