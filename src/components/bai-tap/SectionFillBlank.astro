---
interface FillBlankQuestion {
  id: string;
  number: number;
  sentence: string;
  answer: string;
  explanation: string;
}

interface Props {
  questions: FillBlankQuestion[];
}

const { questions } = Astro.props as Props;
---

<section id="section-3" class="section-content hidden">
  <div class="bg-white rounded-lg shadow-md p-6 mb-6">
    <h2 class="text-2xl font-bold text-gray-900 mb-4">Section 3: Điền 에 / 에서 (Form Practice)</h2>
    <p class="text-gray-600 mb-6">Điền trợ từ đúng vào chỗ trống.</p>

    <div class="space-y-6" id="section3-questions">
      {questions.map((question) => (
        <div class="question-item bg-gray-50 rounded-lg p-6">
          <div class="flex items-start gap-3 mb-4">
            <span class="flex-shrink-0 w-8 h-8 bg-blue-500 text-white rounded-full flex items-center justify-center font-bold">
              {question.number}
            </span>
            <div class="flex-1">
              <p class="text-lg text-gray-800 mb-4">{question.sentence}</p>
              <div class="flex gap-2">
                <input
                  type="text"
                  name={question.id}
                  placeholder="에 hoặc 에서"
                  class="px-4 py-2 border-2 border-gray-300 rounded-lg focus:border-blue-500 focus:outline-none text-gray-900"
                  maxlength="3"
                />
                <button
                  onclick={`checkFillBlank('${question.id}', '${question.answer}')`}
                  class="px-4 py-2 bg-blue-600 text-white rounded-lg hover:bg-blue-700"
                >
                  Kiểm tra
                </button>
              </div>
              <div class="answer-feedback mt-4 hidden">
                <div class="p-3 rounded bg-green-50 border border-green-200">
                  <p class="text-green-800 font-medium">✓ Đúng!</p>
                  <p class="text-green-700 text-sm mt-1">{question.explanation}</p>
                </div>
              </div>
            </div>
          </div>
        </div>
      ))}
    </div>

    <div class="mt-6 pt-6 border-t">
      <div class="mb-4">
        <button onclick="checkAllSection3()" class="w-full px-6 py-3 bg-blue-600 text-white rounded-lg hover:bg-blue-700 transition-colors font-medium mb-2">
          Kiểm tra tất cả
        </button>
        <div id="s3-score" class="text-center text-gray-600 hidden"></div>
      </div>
      <button onclick="completeSection(3)" class="w-full px-6 py-3 bg-green-600 text-white rounded-lg hover:bg-green-700 transition-colors font-medium">
        Hoàn thành Section 3 → Mở Section 4
      </button>
    </div>
  </div>
</section>

