---
interface Option {
  value: string;
  label: string;
}

interface RecognitionQuestion {
  id: string;
  number: number;
  prompt: string;
  options: Option[];
  correctValue: string;
  correctLabel?: string;
  explanation: string;
}

interface Props {
  questions: RecognitionQuestion[];
}

const { questions } = Astro.props as Props;
---

<section id="section-2" class="section-content hidden">
  <div class="bg-white rounded-lg shadow-md p-6 mb-6">
    <h2 class="text-2xl font-bold text-gray-900 mb-4">Section 2: Nhận diện đúng / sai</h2>
    <p class="text-gray-600 mb-6">Chọn câu đúng hoặc tìm câu sai trong các lựa chọn.</p>

    <div class="space-y-6" id="section2-questions">
      {questions.map((question) => (
        <div class="question-item bg-gray-50 rounded-lg p-6">
          <div class="flex items-start gap-3 mb-4">
            <span class="flex-shrink-0 w-8 h-8 bg-blue-500 text-white rounded-full flex items-center justify-center font-bold">
              {question.number}
            </span>
            <div class="flex-1">
              <p class="text-lg font-semibold text-gray-800 mb-4">{question.prompt}</p>
              <div class="space-y-2">
                {question.options.map((option) => (
                  <label class="flex items-center gap-3 p-3 bg-white border-2 rounded hover:border-blue-400 cursor-pointer transition-colors text-gray-900">
                    <input type="radio" name={question.id} value={option.value} class="w-4 h-4 text-blue-600" />
                    <span set:html={option.label}></span>
                  </label>
                ))}
              </div>
              <div class="answer-feedback mt-4 hidden">
                <div class="p-3 rounded bg-green-50 border border-green-200">
                  <p class="text-green-800 font-medium">
                    ✓ Đáp án đúng: <strong>{question.correctLabel ?? question.correctValue}</strong>
                  </p>
                  <p class="text-green-700 text-sm mt-1">{question.explanation}</p>
                </div>
              </div>
            </div>
          </div>
        </div>
      ))}
    </div>

    <div class="mt-6 pt-6 border-t flex gap-4">
      <button onclick="checkSection2()" class="flex-1 px-6 py-3 bg-blue-600 text-white rounded-lg hover:bg-blue-700 transition-colors font-medium">
        Kiểm tra đáp án
      </button>
      <button onclick="completeSection(2)" class="flex-1 px-6 py-3 bg-green-600 text-white rounded-lg hover:bg-green-700 transition-colors font-medium">
        Hoàn thành Section 2 → Mở Section 3
      </button>
    </div>
  </div>
</section>

