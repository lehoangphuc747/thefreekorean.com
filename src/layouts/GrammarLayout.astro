---
import Layout from './Layout.astro';

export interface Props {
  title?: string;
  description?: string;
  lang?: string;
}

const {
  title = 'Ngữ pháp tiếng Hàn - The Free Korean',
  description = 'Danh sách ngữ pháp tiếng Hàn từ sơ cấp đến cao cấp. Học tiếng Hàn miễn phí với The Free Korean.',
} = Astro.props as Props;
---

<Layout title={title} description={description}>
  <slot />
</Layout>
