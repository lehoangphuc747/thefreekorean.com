---
// TOPIK Layout - Layout riêng cho trang TOPIK
import Layout from './Layout.astro';
import ProgressBar from '../components/topik/ProgressBar.astro';

export interface Props {
  title?: string;
  description?: string;
  showBackButton?: boolean;
  showNavigation?: boolean;
  class?: string;
}

const { 
  title = 'TOPIK', 
  description = 'Luyện thi TOPIK - Test of Proficiency in Korean',
  showBackButton = true,
  showNavigation = true,
  class: className = ''
} = Astro.props;

const fullTitle = title === 'TOPIK' ? 'TOPIK - The Free Korean' : `${title} - TOPIK - The Free Korean`;
---

<Layout title={fullTitle} description={description}>
  <!-- Progress Bar - Sticky dưới navbar, z-index cao hơn content -->
  <div class="sticky top-0 z-50 bg-white shadow-sm" id="topik-progress-bar">
    <ProgressBar
      totalQuestions={0}
      answeredQuestions={0}
      correctAnswers={0}
      wrongAnswers={0}
      bookmarkedCount={0}
    />
  </div>

  <div class={`topik-layout min-h-screen bg-gradient-to-br from-blue-50 via-white to-indigo-50 ${className}`}>
    
    <!-- TOPIK Content -->
    <main class="flex-1">
      <slot />
    </main>
  </div>
</Layout>


<style>
  /* TOPIK specific styles */
  .topik-layout {
    font-family: 'Inter', -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, sans-serif;
  }
  
  /* Smooth transitions for all interactive elements */
  .topik-layout a,
  .topik-layout button {
    transition: all 0.2s ease;
  }
  
  /* Custom scrollbar for TOPIK pages */
  .topik-layout ::-webkit-scrollbar {
    width: 8px;
  }
  
  .topik-layout ::-webkit-scrollbar-track {
    background: #f1f5f9;
  }
  
  .topik-layout ::-webkit-scrollbar-thumb {
    background: linear-gradient(180deg, #3b82f6, #6366f1);
    border-radius: 4px;
  }
  
  .topik-layout ::-webkit-scrollbar-thumb:hover {
    background: linear-gradient(180deg, #2563eb, #4f46e5);
  }
</style> 