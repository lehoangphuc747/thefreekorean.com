---
import Layout from '../layouts/Layout.astro';
import GrammarProgress from '../components/grammar/GrammarProgress.astro';

const pageTitle = "Test Progress Component";
---

<Layout title={pageTitle} description="Test page for GrammarProgress component">
  <div class="container mx-auto px-4 py-8">
    <h1 class="text-3xl font-bold text-center mb-8">ðŸ“Š Test Grammar Progress</h1>
    
    <!-- Compact Version -->
    <div class="mb-8">
      <h2 class="text-xl font-bold mb-4">Compact Version:</h2>
      <GrammarProgress 
        showDetailed={false}
        variant="compact"
        userProgress={{
          totalGrammar: 8,
          completedGrammar: 5,
          currentStreak: 7,
          longestStreak: 15,
          totalStudyTime: 240,
          lastStudyDate: "2025-07-23",
          weeklyGoal: 5,
          achievements: ["first_lesson", "streak_7", "master_10"]
        }}
      />
    </div>

    <!-- Full Version -->
    <div class="mb-8">
      <h2 class="text-xl font-bold mb-4">Full Version:</h2>
      <GrammarProgress 
        showDetailed={true}
        variant="full"
        userProgress={{
          totalGrammar: 8,
          completedGrammar: 3,
          currentStreak: 5,
          longestStreak: 12,
          totalStudyTime: 180,
          lastStudyDate: "2025-07-22",
          weeklyGoal: 5,
          achievements: ["first_lesson", "streak_7"]
        }}
      />
    </div>

    <!-- Dashboard Version -->
    <div class="mb-8">
      <h2 class="text-xl font-bold mb-4">Dashboard Version:</h2>
      <GrammarProgress 
        showDetailed={true}
        variant="dashboard"
        userProgress={{
          totalGrammar: 8,
          completedGrammar: 6,
          currentStreak: 10,
          longestStreak: 20,
          totalStudyTime: 360,
          lastStudyDate: "2025-07-23",
          weeklyGoal: 7,
          achievements: ["first_lesson", "streak_7", "streak_30", "master_10", "master_25"]
        }}
      />
    </div>
  </div>
</Layout>
