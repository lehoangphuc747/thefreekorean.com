---
import AvatarCard from '../components/gioi-thieu/AvatarCard.jsx';
import HighlightQuote from '../components/gioi-thieu/HighlightQuote.jsx';
import AboutSection from '../components/gioi-thieu/AboutSection.jsx';
import StrengthsList from '../components/gioi-thieu/StrengthsList.jsx';
import ContactLinks from '../components/gioi-thieu/ContactLinks.jsx';
---

<html lang="vi">
  <head>
    <title>Giới thiệu - Lê Hoàng Phúc</title>
    <meta name="description" content="Giới thiệu về Lê Hoàng Phúc - người sáng lập The Free Korean. Đam mê giáo dục, công nghệ và chia sẻ tri thức." />
  </head>
  <body class="bg-gradient-to-br from-blue-50 via-white to-purple-50 min-h-screen">
    <main class="max-w-3xl mx-auto px-4 py-16">
      <AvatarCard client:load />
      <AboutSection client:load />
      <StrengthsList client:load />
      <HighlightQuote client:load />
      <ContactLinks client:load />
    </main>
  </body>
</html>