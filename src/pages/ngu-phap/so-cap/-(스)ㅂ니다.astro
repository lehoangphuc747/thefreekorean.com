const introductionData = {
  dialogues: [
    {
      id: 1,
      lines: [
        { speaker: '교사', text_ko: '김영희. 김영희입니다.', text_vi: '(Chỉ vào bảng tên của mình) Kim Young-hee. Là Kim Young-hee ạ.' },
        { speaker: '학생', text_ko: '김영희입니다.', text_vi: 'Là Kim Young-hee ạ.' }
      ] 
    },
    {
      id: 2,
      lines: [
        { speaker: '교사', text_ko: '미도리. 미도리입니다.', text_vi: '(Chỉ vào bảng tên của học sinh) Midori. Là Midori ạ.' },
        { speaker: '학생', text_ko: '미도리입니다.', text_vi: 'Là Midori ạ.' }
      ]
    }
  ],
  notes: [
    {
      note_ko: '`-습니다`를 도입할 때 먼저 학생에게서 쉽게 끌어낼 수 있는 이름 정보를 바탕으로 학생들이 말하는 이름과 \'이름+-ㅂ니다\'를 나란히 제시하여 문장을 만들어 준다.',
      note_vi: 'Khi giới thiệu `-습니다`, dựa trên thông tin tên dễ dàng lấy được từ học sinh, giáo viên có thể đặt tên học sinh và cấu trúc \'tên + -ㅂ니다\' cạnh nhau để tạo thành câu.'
    }
  ]
};

const morphologyInfoData = {
  sections: [
    {
      id: 1,
      title: 'Trường hợp động từ/tính từ có patchim',
      rule: 'Nếu âm tiết cuối cùng của gốc động từ hoặc tính từ có patchim, dùng `-습니다`.',
      examples: [
        { before: '먹-', after: '먹습니다' },
        { before: '읽-', after: '읽습니다' },
        { before: '찾-', after: '찾습니다' },
        { before: '많-', after: '많습니다' },
        { before: '좋-', after: '좋습니다' },
        { before: '덥-', after: '덥습니다' }
      ]
    },
    {
      id: 2,
      title: 'Trường hợp động từ/tính từ không có patchim hoặc có patchim \'ㄹ\'',
      rule: 'Nếu âm tiết cuối cùng của gốc động từ hoặc tính từ không có patchim hoặc kết thúc bằng patchim \'ㄹ\', dùng `-ㅂ니다`. Lưu ý, khi kết hợp với patchim \'ㄹ\', \'ㄹ\' sẽ bị lược bỏ.',
      examples: [
        { before: '가-', after: '갑니다' },
        { before: '오-', after: '옵니다' },
        { before: '크-', after: '큽니다' },
        { before: '공부하-', after: '공부합니다' },
        { before: '살-', after: '삽니다' },
        { before: '만들-', after: '만듭니다' }
      ]
    },
    {
      id: 3,
      title: 'Trường hợp với 이다, 아니다',
      rule: 'Gốc \'이다, 아니다\' dùng với `-ㅂ니다`. Trường hợp \'이다\' đứng sau danh từ không có patchim, có thể viết là \'danh từ + -ㅂ니다\'.',
      examples: [
        { before: '책이-', after: '책입니다' },
        { before: '학생이-', after: '학생입니다' },
        { before: '가수이-', after: '가수입니다/가숩니다' },
