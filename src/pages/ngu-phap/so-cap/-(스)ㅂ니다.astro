    }
  ],
  irregularSection: null
};

const morphologyUsageData = {
  rules: [
    { condition: 'Gốc có patchim', rule: '+ -습니다', examples: ['먹습니다', '읽습니다', '찾습니다'] },
    { condition: 'Gốc không có patchim', rule: '+ -ㅂ니다', examples: ['갑니다', '옵니다', '큽니다'] },
    { condition: 'Gốc có patchim "ㄹ"', rule: '+ -ㅂ니다 (Lược bỏ "ㄹ")', examples: ['삽니다', '만듭니다'] }
