      { q_ko: '책을 읽습니까?', q_vi: 'Bạn đọc sách không?', a_ko: '네, 읽습니다.', a_vi: 'Vâng, tôi đọc.' },
      { q_ko: '어디에 갑니까?', q_vi: 'Bạn đi đâu?', a_ko: '학교에 갑니다.', a_vi: 'Tôi đi đến trường.' },
