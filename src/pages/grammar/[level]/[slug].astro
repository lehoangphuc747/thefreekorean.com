    position: fixed;
    bottom: 20px;
    right: 20px;
    background: #10b981;
    color: white;
    padding: 10px 14px;
    border-radius: 8px;
    box-shadow: 0 6px 20px rgba(16,185,129,0.3);
    z-index: 9999;
    font-size: 14px;
    opacity: 0;
    transform: translateY(10px);
    transition: all 0.25s ease;
  }
  .copy-toast.show { opacity: 1; transform: translateY(0); }

  .grammar-post { /* keep spacing */ }

  .toc-floating-btn:hover { background: #2563eb; }

  .back-button {
    margin-bottom: 1.5rem;
  }

  @media (min-width: 1024px) {
    .back-button {
      display: none;
    }
  }

  .back-link {
    display: inline-flex;
    align-items: center;
    gap: 0.5rem;
    color: #3b82f6;
    text-decoration: none;
    font-weight: 500;
