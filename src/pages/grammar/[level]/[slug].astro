    color: #374151;
  }

  .action-btn:hover {
    border-color: #3b82f6;
    color: #3b82f6;
  }

  .grammar-content {
    margin-bottom: 2rem;
  }

  /* Ordered list default numbering */
  .markdown-content ol {
    list-style: decimal outside;
    padding-left: 1.5rem;
    margin: 0.25rem 0 0.5rem 0;
  }

  .markdown-content ol > li {
    margin: 0.25rem 0;
    line-height: 1.6;
  }

  /* Unordered lists keep disc bullets */
  .markdown-content ul {
    list-style: disc outside;
    padding-left: 1.5rem;
    margin: 0.25rem 0 0.5rem 0;
  }

  .markdown-content ul > li {
    margin: 0.25rem 0;
    line-height: 1.6;
  }

