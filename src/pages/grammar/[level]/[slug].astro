  .action-btn.back-link:hover { border-color: #3b82f6; }

  .toc-floating-btn { display: none; }

  /* Heading link icon */
  .markdown-content .heading-anchor {
    margin-left: 0.5rem;
    opacity: 0;
    transition: opacity 0.2s ease;
    color: #94a3b8;
    text-decoration: none;
    display: inline-flex;
    align-items: center;
    line-height: 1;
  }
  .markdown-content h1:hover .heading-anchor,
  .markdown-content h2:hover .heading-anchor,
  .markdown-content h3:hover .heading-anchor,
  .markdown-content h4:hover .heading-anchor { opacity: 1; }
