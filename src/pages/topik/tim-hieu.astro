          tocContent.style.maxHeight = '0';
          tocContent.style.overflow = 'hidden';
          tocContent.style.opacity = '0';
          tocIcon.style.transform = 'rotate(-90deg)';
        } else {
          tocContent.style.maxHeight = tocContent.scrollHeight + 'px';
          tocContent.style.opacity = '1';
          tocIcon.style.transform = 'rotate(0deg)';
        }
      }
      
      toggleHeader.addEventListener('click', toggleCollapse);
      toggleHeader.addEventListener('keydown', function(e) {
        if (e.key === 'Enter' || e.key === ' ') {
          e.preventDefault();
          toggleCollapse();
        }
      });
    }
  });
</script>
