    level: "Sơ cấp",
    lessons: [
      { number: 1, title: "Bài 1", cards: 55, available: true },
      { number: 2, title: "Bài 2", cards: 124, available: true },
      { number: 3, title: "Bài 3", cards: 130, available: true },
