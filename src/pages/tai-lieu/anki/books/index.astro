        Bộ sưu tập các deck Anki cho học tiếng Hàn và ôn thi THPT Việt Nam. 
        Tải về và bắt đầu học ngay hôm nay!
      </p>
    </div>

    <!-- Books Grid -->
    <div class="grid grid-cols-1 lg:grid-cols-2 gap-8">
      {books.map(book => (
        <div class="bg-white rounded-xl shadow-lg overflow-hidden hover:shadow-xl transition-shadow">
          <!-- Book Header -->
          <div class="p-6 border-b border-gray-200">
            <div class="flex items-start space-x-4">
              <img 
                src={book.image} 
                alt={book.title}
                class="w-20 h-28 object-cover rounded-lg shadow-md"
                loading="lazy"
              />
              <div class="flex-1">
                <h2 class="text-xl font-bold text-gray-900 mb-2">{book.title}</h2>
                <p class="text-gray-600 mb-3">{book.description}</p>
                <div class="flex flex-wrap gap-2">
                  <span class="px-3 py-1 bg-blue-100 text-blue-800 text-sm rounded-full">
                    {book.language}
                  </span>
                  <span class="px-3 py-1 bg-green-100 text-green-800 text-sm rounded-full">
                    {book.level}
                  </span>
                  <span class="px-3 py-1 bg-purple-100 text-purple-800 text-sm rounded-full">
                    {book.totalLessons} bài học
                  </span>
                  <span class="px-3 py-1 bg-orange-100 text-orange-800 text-sm rounded-full">
                    {book.totalCards} thẻ
                  </span>
                </div>
                {book.downloadUrl && (
                  <a 
                    href={book.downloadUrl}
                    target="_blank"
                    rel="noopener noreferrer"
                    class="inline-flex items-center px-4 py-2 bg-green-600 text-white text-sm font-semibold rounded-lg hover:bg-green-700 transition-colors mt-3"
                  >
                    <svg class="w-4 h-4 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 10v6m0 0l-3-3m3 3l3-3m2 8H7a2 2 0 01-2-2V5a2 2 0 012-2h5.586a1 1 0 01.707.293l5.414 5.414a1 1 0 01.293.707V19a2 2 0 01-2 2z"></path>
                    </svg>
                    Tải deck
                  </a>
                )}
              </div>
            </div>
          </div>

          <!-- Lessons List -->
          <div class="p-6">
            <h3 class="text-lg font-semibold text-gray-900 mb-4">Danh sách bài học</h3>
            {book.lessons.length > 0 ? (
              <div class="space-y-2">
                {book.lessons.map(lesson => (
                  <div class="flex items-center justify-between p-3 bg-gray-50 rounded-lg hover:bg-gray-100 transition-colors">
                    <div class="flex items-center space-x-3">
                      <span class="w-8 h-8 bg-blue-500 text-white rounded-full flex items-center justify-center text-sm font-semibold">
                        {lesson.number}
                      </span>
                      <span class="font-medium text-gray-900">{lesson.title}</span>
                      <span class="text-sm text-gray-500">({lesson.cards} thẻ)</span>
                    </div>
                    {lesson.available ? (
                      <a 
                        href={`/tai-lieu/anki/books/${book.id}/bai-${lesson.number}`}
                        class="px-4 py-2 bg-blue-600 text-white text-sm rounded-md hover:bg-blue-700 transition-colors"
                      >
                        Tải xuống
                      </a>
                    ) : (
                      <span class="px-4 py-2 bg-gray-300 text-gray-500 text-sm rounded-md cursor-not-allowed">
                        Sắp có
                      </span>
                    )}
                  </div>
                ))}
              </div>
            ) : (
              <div class="text-center py-8 text-gray-500">
                <svg class="w-12 h-12 mx-auto mb-4 text-gray-300" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 6.253v13m0-13C10.832 5.477 9.246 5 7.5 5S4.168 5.477 3 6.253v13C4.168 18.477 5.754 18 7.5 18s3.332.477 4.5 1.253m0-13C13.168 5.477 14.754 5 16.5 5c1.746 0 3.332.477 4.5 1.253v13C19.832 18.477 18.246 18 16.5 18c-1.746 0-3.332.477-4.5 1.253"></path>
                </svg>
