---
import Layout from '../../../layouts/Layout.astro';
import TextbooksHeader from '../../../components/tai-lieu/TextbooksHeader.astro';
import TextbooksDownloader from '../../../components/tai-lieu/TextbooksDownloader.astro';
import PDFPreview from '../../../components/tai-lieu/PDFPreview.astro';

export const postData = {
  title: "Tiếng Hàn Tổng Hợp Sơ cấp 1",
  date: "2024-05-01",
  category: "Giáo trình",
  subcategory: "Tiếng Hàn Tổng Hợp",
  type: "PDF",
  cover: "/images/tieng-han-tong-hop-1.jpg",
  description: "Giáo trình cơ bản cho người mới bắt đầu học tiếng Hàn",
  downloadUrl: "https://drive.google.com/open?id=1xZmxTrbwj9zZIUxxFN8MkvTSV6lk6VQn&usp=drive_fs",
  downloadOriginal: "https://drive.google.com/open?id=1WqjkbAW0QdNzsRJEoqJ6gBkVxjSWsVav&usp=drive_fs",
  downloadWorkbook: "https://1drv.ms/b/c/95cd9adb2b8c9171/EXGRjCvbms0ggJWjTwAAAAAB0DgAuqa108zsIb8za1nrdw?e=ZjvnyG",
  downloadAudio: "https://1drv.ms/f/c/95cd9adb2b8c9171/EnGRjCvbms0ggJXbWwYAAAAB_AwnJEjawYkaIy5e6nP9mQ?e=fesA9k",
  fileSize: "18.1MB",
  originalSize: "107.6MB",
  workbookSize: "16.3MB",
  audioSize: "Folder audio",
  pages: 250,
  seoTitle: "Giáo trình Tiếng Hàn Tổng Hợp Sơ cấp 1 - Học tiếng Hàn hiệu quả",
  seoDescription: "Giáo trình Tiếng Hàn Tổng Hợp Sơ cấp 1 dành cho người mới bắt đầu. Bao gồm PDF, audio, bài tập, ngữ pháp cơ bản, từ vựng theo chủ đề. Tự học tiếng Hàn dễ dàng.",
  keywords: ["học tiếng Hàn", "giáo trình tiếng Hàn sơ cấp", "tự học tiếng Hàn", "Tiếng Hàn Tổng Hợp"]
};
---

<Layout title={postData.title}>
  <main class="container mx-auto px-4 py-8">
    <div class="max-w-4xl mx-auto">
      
      <!-- Header Component -->
      <TextbooksHeader 
        title={postData.title}
        description={postData.description}
        cover={postData.cover}
        type={postData.type}
        category={postData.category}
        subcategory={postData.subcategory}
        pages={postData.pages}
        fileSize={postData.fileSize}
      />

      <!-- Download Component -->
      <TextbooksDownloader 
        downloadUrl={postData.downloadUrl}
        downloadOriginal={postData.downloadOriginal}
        downloadWorkbook={postData.downloadWorkbook}
        downloadAudio={postData.downloadAudio}
        fileSize={postData.fileSize}
        originalSize={postData.originalSize}
        workbookSize={postData.workbookSize}
        audioSize={postData.audioSize}
      />

      <!-- PDF Preview Component -->
      <PDFPreview 
        downloadUrl={postData.downloadUrl}
        title={`Xem trước: ${postData.title}`}
        height="600px"
      />
    </div>
  </main>
</Layout>



<style>
  .prose {
    color: #374151;
  }
  
  .prose h2 {
    color: #1f2937;
    font-size: 1.5rem;
    font-weight: 700;
    margin-top: 2rem;
    margin-bottom: 1rem;
    border-bottom: 2px solid #e5e7eb;
    padding-bottom: 0.5rem;
  }
  
  .prose h3 {
    color: #374151;
    font-size: 1.25rem;
    font-weight: 600;
    margin-top: 1.5rem;
    margin-bottom: 0.75rem;
  }
  
  .prose p {
    margin-bottom: 1rem;
    line-height: 1.7;
  }
  
  .prose ul {
    margin-bottom: 1rem;
    padding-left: 1.5rem;
  }
  
  .prose li {
    margin-bottom: 0.5rem;
    line-height: 1.6;
  }
  
  .prose strong {
    color: #3b82f6;
    font-weight: 600;
  }

  .prose hr {
    margin: 2rem 0;
    border: none;
    border-top: 1px solid #e5e7eb;
  }

  /* Smooth scroll behavior */
  html {
    scroll-behavior: smooth;
  }
</style>
