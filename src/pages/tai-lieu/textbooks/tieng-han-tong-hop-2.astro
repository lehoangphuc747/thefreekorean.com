---
import Layout from '../../../layouts/Layout.astro';
import TextbooksHeader from '../../../components/tai-lieu/TextbooksHeader.astro';
import TextbooksDownloader from '../../../components/tai-lieu/TextbooksDownloader.astro';

export const postData = {
  title: "Tiếng Hàn Tổng Hợp Sơ cấp 2",
  date: "2024-05-01",
  category: "Giáo trình",
  subcategory: "Tiếng Hàn Tổng Hợp",
  type: "PDF",
  cover: "/images/tieng-han-tong-hop-2.jpg", // Temporary placeholder until tieng-han-tong-hop-2.jpg is added
  description: "Giáo trình sơ cấp 2 cho người đã học xong cấp độ sơ cấp 1",
  downloadUrl: "https://1drv.ms/b/c/95cd9adb2b8c9171/EQyXw5hvZAdNh3EFgCXo_wIB2KU1C4cRt1C3LUY5gIwaew?e=liJca4",
  downloadOriginal: "https://1drv.ms/b/c/95cd9adb2b8c9171/EQyXw5hvZAdNh3EFgCXo_wIB2KU1C4cRt1C3LUY5gIwaew?e=liJca4",
  downloadWorkbook: "https://1drv.ms/b/c/95cd9adb2b8c9171/EZuEzsNwxjJBmUN5VA96NYABhyWRMJfBDUno_Gdm5H23oQ?e=43ovzx",
  downloadAudio: "https://1drv.ms/u/c/95cd9adb2b8c9171/ES38-rd0YGBKoe56PHQWwlgBy_sXKall07FSod8i8ahJSQ?e=3bAcYQ",
  fileSize: "19.6MB",
  originalSize: "19.6MB",
  workbookSize: "9.4MB",
  audioSize: "Folder audio",
  pages: 362,
  seoTitle: "Giáo trình Tiếng Hàn Tổng Hợp Sơ cấp 2 - Học tiếng Hàn hiệu quả",
  seoDescription: "Giáo trình Tiếng Hàn Tổng Hợp Sơ cấp 2 cho người đã có nền tảng cơ bản. Bao gồm PDF, audio, bài tập, ngữ pháp nâng cao, từ vựng phong phú. Tiếp tục hành trình học tiếng Hàn.",
  keywords: ["học tiếng Hàn", "giáo trình tiếng Hàn sơ cấp 2", "tự học tiếng Hàn", "Tiếng Hàn Tổng Hợp", "tiếng Hàn trung cấp"]
};
---

<Layout title={postData.title}>
  <main class="container mx-auto px-4 py-8">
    <div class="max-w-4xl mx-auto">
      
      <!-- Header Component -->
      <TextbooksHeader 
        title={postData.title}
        description={postData.description}
        cover={postData.cover}
        type={postData.type}
        category={postData.category}
        subcategory={postData.subcategory}
        pages={postData.pages}
        fileSize={postData.fileSize}
      />

      <!-- Download Component -->
      <TextbooksDownloader 
        downloadUrl={postData.downloadUrl}
        downloadOriginal={postData.downloadOriginal}
        downloadWorkbook={postData.downloadWorkbook}
        downloadAudio={postData.downloadAudio}
        fileSize={postData.fileSize}
        originalSize={postData.originalSize}
        workbookSize={postData.workbookSize}
        audioSize={postData.audioSize}
      />

  </main>
</Layout>

<style>
  .prose {
    color: #374151;
  }
  
  .prose h2 {
    color: #1f2937;
    font-size: 1.5rem;
    font-weight: 700;
    margin-top: 2rem;
    margin-bottom: 1rem;
    border-bottom: 2px solid #e5e7eb;
    padding-bottom: 0.5rem;
  }
  
  .prose h3 {
    color: #374151;
    font-size: 1.25rem;
    font-weight: 600;
    margin-top: 1.5rem;
    margin-bottom: 0.75rem;
  }
  
  .prose p {
    margin-bottom: 1rem;
    line-height: 1.7;
  }
  
  .prose ul {
    margin-bottom: 1rem;
    padding-left: 1.5rem;
  }
  
  .prose li {
    margin-bottom: 0.5rem;
    line-height: 1.6;
  }
  
  .prose strong {
    color: #3b82f6;
    font-weight: 600;
  }

  .prose hr {
    margin: 2rem 0;
    border: none;
    border-top: 1px solid #e5e7eb;
  }

  /* Smooth scroll behavior */
  html {
    scroll-behavior: smooth;
  }
</style>
